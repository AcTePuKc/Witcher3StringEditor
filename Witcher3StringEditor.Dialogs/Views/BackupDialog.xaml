<Window
    x:Class="Witcher3StringEditor.Dialogs.Views.BackupDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="clr-namespace:Witcher3StringEditor.Dialogs.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:l="clr-namespace:Witcher3StringEditor.Locales;assembly=Witcher3StringEditor.Locales"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sf="http://schemas.syncfusion.com/wpf"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:vm="clr-namespace:Witcher3StringEditor.Dialogs.ViewModels"
    Title="{I18N {x:Static l:LangKeys.BackupDialogTitle}}"
    Width="1200"
    Height="800"
    d:DataContext="{d:DesignInstance Type=vm:BackupDialogViewModel}"
    ui:TitleBar.ExtendViewIntoTitleBar="True"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    Closed="Window_Closed"
    WindowChrome.IsHitTestVisibleInChrome="True"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Height="48">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                Margin="20,0,0,0"
                VerticalAlignment="Center"
                Text="{I18N {x:Static l:LangKeys.BackupDialogTitle}}" />
            <ui:AutoSuggestBox
                Grid.Column="1"
                VerticalAlignment="Center"
                PlaceholderText="{I18N {x:Static l:LangKeys.SearchBoxPlaceholderText}}"
                QuerySubmitted="SearchBox_QuerySubmitted"
                TextChanged="SearchBox_TextChanged">
                <ui:AutoSuggestBox.QueryIcon>
                    <ui:FontIcon Glyph="&#xe721;" />
                </ui:AutoSuggestBox.QueryIcon>
            </ui:AutoSuggestBox>
        </Grid>
        <sf:SfDataGrid
            x:Name="SfDataGrid"
            Grid.Row="1"
            Grid.ColumnSpan="3"
            Margin="16,16,16,0"
            AllowResizingColumns="True"
            AutoGenerateColumns="False"
            ColumnSizer="Star"
            ItemsSource="{Binding PagedSource, ElementName=SfDataPager, Mode=TwoWay}"
            NavigationMode="Row"
            RowHeight="30"
            ShowRowHeader="True">
            <sf:SfDataGrid.Resources>
                <ResourceDictionary>
                    <Style TargetType="sf:GridRowHeaderCell">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="sf:GridRowHeaderCell">
                                    <Border
                                        x:Name="PART_RowHeaderCellBorder"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                        <Grid>
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Text="{Binding RowIndex, RelativeSource={RelativeSource TemplatedParent}}"
                                                TextAlignment="Center" />
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ResourceDictionary>
            </sf:SfDataGrid.Resources>
            <i:Interaction.Behaviors>
                <b:SfDataGridSizeChangedBehavior />
                <b:SfDataGridQueryRowHeightBehavior MinHeight="{Binding ElementName=SfDataGrid, Path=RowHeight}" />
            </i:Interaction.Behaviors>
            <sf:SfDataGrid.Columns>
                <sf:GridTextColumn
                    Width="150"
                    HeaderText="{I18N {x:Static l:LangKeys.FileName}}"
                    MappingName="FileName"
                    MinimumWidth="150"
                    TextAlignment="Center" />
                <sf:GridTextColumn
                    Width="200"
                    HeaderText="{I18N {x:Static l:LangKeys.Hash}}"
                    MappingName="Hash"
                    MinimumWidth="200"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
                <sf:GridTextColumn
                    HeaderText="{I18N {x:Static l:LangKeys.OrginPath}}"
                    MappingName="OrginPath"
                    MinimumWidth="150"
                    TextWrapping="Wrap" />
                <sf:GridTextColumn
                    HeaderText="{I18N {x:Static l:LangKeys.BackupPath}}"
                    MappingName="BackupPath"
                    MinimumWidth="150"
                    TextWrapping="Wrap" />
                <sf:GridDateTimeColumn
                    Width="200"
                    HeaderText="{I18N {x:Static l:LangKeys.BackupTime}}"
                    MappingName="BackupTime"
                    MinimumWidth="200"
                    Pattern="FullDateTime"
                    TextAlignment="Center" />
                <sf:GridTemplateColumn
                    Width="100"
                    HorizontalAlignment="Center"
                    AllowSorting="False"
                    HeaderText="{I18N {x:Static l:LangKeys.RestoreBtnContent}}"
                    MappingName="Null"
                    MinimumWidth="100">
                    <sf:GridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button
                                HorizontalAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}, Path=DataContext.RestoreCommand}"
                                CommandParameter="{Binding}">
                                <ui:FontIcon Glyph="&#xe777;" />
                            </Button>
                        </DataTemplate>
                    </sf:GridTemplateColumn.CellTemplate>
                </sf:GridTemplateColumn>
                <sf:GridTemplateColumn
                    Width="100"
                    HorizontalAlignment="Center"
                    AllowSorting="False"
                    HeaderText="{I18N {x:Static l:LangKeys.DeleteBtnContent}}"
                    MappingName="Null"
                    MinimumWidth="100">
                    <sf:GridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button
                                HorizontalAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}, Path=DataContext.DeleteCommand}"
                                CommandParameter="{Binding}">
                                <ui:FontIcon Glyph="&#xe74d;" />
                            </Button>
                        </DataTemplate>
                    </sf:GridTemplateColumn.CellTemplate>
                </sf:GridTemplateColumn>
            </sf:SfDataGrid.Columns>
        </sf:SfDataGrid>
        <sf:SfDataPager
            x:Name="SfDataPager"
            Grid.Row="2"
            Margin="0,4"
            HorizontalAlignment="Center"
            NumericButtonCount="10"
            PageSize="15"
            Source="{Binding AppSettings.BackupItems}" />
    </Grid>
</Window>