<Window
    x:Class="Witcher3StringEditor.Dialogs.Views.BackupDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="clr-namespace:Witcher3StringEditor.Dialogs.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:l="clr-namespace:Witcher3StringEditor.Locales;assembly=Witcher3StringEditor.Locales"
    xmlns:i18n="clr-namespace:System.Windows;assembly=Antelcat.I18N.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sf="http://schemas.syncfusion.com/wpf"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:vm="clr-namespace:Witcher3StringEditor.Dialogs.ViewModels"
    Title="{i18n:I18N Key={x:Static l:LangKeys.BackupDialogTitle}}"
    Width="1200"
    Height="800"
    d:DataContext="{d:DesignInstance Type=vm:BackupDialogViewModel}"
    ui:TitleBar.ExtendViewIntoTitleBar="True"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    Closed="BackupDialog_OnClosed"
    WindowChrome.IsHitTestVisibleInChrome="True"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <!-- 
        Main grid layout for the backup dialog
        Contains three rows: title bar, data grid, and pager controls
    -->
    <Grid>
        <Grid.RowDefinitions>
            <!-- Title bar row -->
            <RowDefinition Height="48" />
            <!-- Data grid row -->
            <RowDefinition Height="*" />
            <!-- Pager controls row -->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!-- Title bar area containing the dialog title and search box -->
        <Grid Height="48">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!-- Dialog title text -->
            <TextBlock
                Grid.Column="0"
                Margin="20,0,0,0"
                VerticalAlignment="Center"
                Text="{i18n:I18N Key={x:Static l:LangKeys.BackupDialogTitle}}" />
            <!-- Search box for filtering backup items -->
            <ui:AutoSuggestBox
                Grid.Column="1"
                VerticalAlignment="Center"
                PlaceholderText="{i18n:I18N Key={x:Static l:LangKeys.SearchBoxPlaceholderText}}"
                QuerySubmitted="SearchBox_QuerySubmitted"
                TextChanged="SearchBox_TextChanged">
                <ui:AutoSuggestBox.QueryIcon>
                    <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Search}" />
                </ui:AutoSuggestBox.QueryIcon>
            </ui:AutoSuggestBox>
        </Grid>
        <!-- Data grid displaying backup items -->
        <sf:SfDataGrid
            x:Name="SfDataGrid"
            Grid.Row="1"
            Grid.ColumnSpan="3"
            Margin="16,16,16,0"
            AllowResizingColumns="True"
            AutoGenerateColumns="False"
            ColumnSizer="Star"
            ItemsSource="{Binding PagedSource, ElementName=SfDataPager, Mode=TwoWay}"
            NavigationMode="Row"
            RowHeight="30"
            ShowRowHeader="True"
            GridPasteOption="None">
            <!-- Data grid resources for customizing row header appearance -->
            <sf:SfDataGrid.Resources>
                <ResourceDictionary>
                    <!-- Style for row header cells to display row numbers -->
                    <Style TargetType="sf:GridRowHeaderCell">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="sf:GridRowHeaderCell">
                                    <Border
                                        x:Name="PART_RowHeaderCellBorder"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                        <Grid>
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Text="{Binding RowIndex, RelativeSource={RelativeSource TemplatedParent}}"
                                                TextAlignment="Center" />
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ResourceDictionary>
            </sf:SfDataGrid.Resources>
            <!-- Interaction behaviors for handling grid sizing and row height -->
            <i:Interaction.Behaviors>
                <!-- Behavior to handle grid size changes -->
                <b:SfDataGridSizeChangedBehavior />
                <!-- Behavior to handle row height queries -->
                <b:SfDataGridQueryRowHeightBehavior MinHeight="{Binding ElementName=SfDataGrid, Path=RowHeight}" />
            </i:Interaction.Behaviors>
            <!-- Data grid columns definition -->
            <sf:SfDataGrid.Columns>
                <!-- File name column -->
                <!-- TODO(i18n): restore localization when supported -->
                <sf:GridTextColumn
                    Width="150"
                    HeaderText="File name"
                    MappingName="FileName"
                    MinimumWidth="150"
                    TextAlignment="Center" />
                <!-- Hash column -->
                <!-- TODO(i18n): restore localization when supported -->
                <sf:GridTextColumn
                    Width="200"
                    HeaderText="Hash"
                    MappingName="Hash"
                    MinimumWidth="200"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
                <!-- Original path column -->
                <!-- TODO(i18n): restore localization when supported -->
                <sf:GridTextColumn
                    HeaderText="Original path"
                    MappingName="OriginPath"
                    MinimumWidth="150"
                    TextWrapping="Wrap" />
                <!-- Backup path column -->
                <!-- TODO(i18n): restore localization when supported -->
                <sf:GridTextColumn
                    HeaderText="Backup path"
                    MappingName="BackupPath"
                    MinimumWidth="150"
                    TextWrapping="Wrap" />
                <!-- Backup time column -->
                <!-- TODO(i18n): restore localization when supported -->
                <sf:GridDateTimeColumn
                    Width="200"
                    HeaderText="Backup time"
                    MappingName="BackupTime"
                    MinimumWidth="200"
                    Pattern="FullDateTime"
                    TextAlignment="Center" />
                <!-- Restore button column -->
                <!-- TODO(i18n): restore localization when supported -->
                <sf:GridTemplateColumn
                    Width="100"
                    HorizontalAlignment="Center"
                    AllowSorting="False"
                    HeaderText="Restore"
                    MappingName="Null"
                    MinimumWidth="100">
                    <sf:GridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button
                                HorizontalAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}, Path=DataContext.RestoreCommand}"
                                CommandParameter="{Binding}">
                                <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.UpdateRestore}" />
                            </Button>
                        </DataTemplate>
                    </sf:GridTemplateColumn.CellTemplate>
                </sf:GridTemplateColumn>
                <!-- Delete button column -->
                <!-- TODO(i18n): restore localization when supported -->
                <sf:GridTemplateColumn
                    Width="100"
                    HorizontalAlignment="Center"
                    AllowSorting="False"
                    HeaderText="Delete"
                    MappingName="Null"
                    MinimumWidth="100">
                    <sf:GridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button
                                HorizontalAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}, Path=DataContext.DeleteCommand}"
                                CommandParameter="{Binding}">
                                <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Delete}" />
                            </Button>
                        </DataTemplate>
                    </sf:GridTemplateColumn.CellTemplate>
                </sf:GridTemplateColumn>
            </sf:SfDataGrid.Columns>
        </sf:SfDataGrid>
        <!-- Data pager for pagination of backup items -->
        <sf:SfDataPager
            x:Name="SfDataPager"
            Grid.Row="2"
            Margin="0,4"
            HorizontalAlignment="Center"
            NumericButtonCount="10"
            PageSize="15"
            Source="{Binding AppSettings.BackupItems}" />
    </Grid>
</Window>
