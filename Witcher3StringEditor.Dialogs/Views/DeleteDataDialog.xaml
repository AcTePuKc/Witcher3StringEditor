<Window
    x:Class="Witcher3StringEditor.Dialogs.Views.DeleteDataDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="clr-namespace:Witcher3StringEditor.Dialogs.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:iwk="http://schemas.inkore.net/lib/ui/wpf"
    xmlns:l="clr-namespace:Witcher3StringEditor.Locales;assembly=Witcher3StringEditor.Locales"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sf="http://schemas.syncfusion.com/wpf"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:vm="clr-namespace:Witcher3StringEditor.Dialogs.ViewModels"
    Title="{I18N {x:Static l:LangKeys.DeleteDialogTitle}}"
    Width="1200"
    Height="800"
    Closed="DeleteDataDialog_OnClosed"
    d:DataContext="{d:DesignInstance Type=vm:DeleteDataDialogViewModel}"
    ui:TitleBar.ExtendViewIntoTitleBar="True"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    WindowChrome.IsHitTestVisibleInChrome="True"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <!-- 
        Main grid layout for the delete data dialog
        Contains two rows: title bar and content area
    -->
    <Grid>
        <Grid.RowDefinitions>
            <!-- Title bar row -->
            <RowDefinition Height="48" />
            <!-- Content area row -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!-- Title text displayed in the title bar area -->
        <TextBlock
            Margin="20,0,0,0"
            VerticalAlignment="Center"
            Text="{I18N {x:Static l:LangKeys.DeleteDialogTitle}}" />
        <!-- Content grid containing the data grid and action buttons -->
        <Grid Grid.Row="1" Margin="16,16,16,24">
            <Grid.RowDefinitions>
                <!-- Message text row -->
                <RowDefinition Height="Auto" />
                <!-- Data grid row -->
                <RowDefinition Height="*" />
                <!-- Action buttons row -->
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <!-- Message informing the user about the delete operation -->
            <TextBlock Text="{I18N {x:Static l:LangKeys.DeleteDialogMessage}}" />
            <!-- Data grid displaying the items to be deleted -->
            <sf:SfDataGrid
                x:Name="SfDataGrid"
                Grid.Row="1"
                Margin="0,16"
                AllowDeleting="False"
                AllowEditing="False"
                AllowResizingColumns="True"
                AutoGenerateColumns="False"
                ColumnSizer="AutoWithLastColumnFill"
                ItemsSource="{Binding W3StringItems}"
                NavigationMode="Row"
                RowHeight="30"
                ShowRowHeader="True">
                <!-- Data grid resources for customizing row header appearance -->
                <sf:SfDataGrid.Resources>
                    <ResourceDictionary>
                        <!-- Style for row header cells to display row numbers -->
                        <Style TargetType="sf:GridRowHeaderCell">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="sf:GridRowHeaderCell">
                                        <Border
                                            x:Name="PART_RowHeaderCellBorder"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}">
                                            <Grid>
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Text="{Binding RowIndex, RelativeSource={RelativeSource TemplatedParent}}"
                                                    TextAlignment="Center" />
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ResourceDictionary>
                </sf:SfDataGrid.Resources>
                <!-- Interaction behaviors for handling grid sizing and row height -->
                <i:Interaction.Behaviors>
                    <!-- Behavior to handle grid size changes -->
                    <b:SfDataGridSizeChangedBehavior />
                    <!-- Behavior to handle row height queries -->
                    <b:SfDataGridQueryRowHeightBehavior MinHeight="{Binding RowHeight, ElementName=SfDataGrid}" />
                </i:Interaction.Behaviors>
                <!-- Data grid columns definition -->
                <sf:SfDataGrid.Columns>
                    <!-- String ID column -->
                    <sf:GridTextColumn
                        HeaderText="ID"
                        MappingName="StrId"
                        MinimumWidth="100"
                        TextAlignment="Center" />
                    <!-- Key in hexadecimal format column -->
                    <sf:GridTextColumn
                        HeaderText="Key(Hex)"
                        MappingName="KeyHex"
                        MinimumWidth="100"
                        TextAlignment="Center" />
                    <!-- Key name column -->
                    <sf:GridTextColumn
                        HeaderText="Key(String)"
                        MappingName="KeyName"
                        MinimumWidth="200"
                        TextAlignment="Center" />
                    <!-- Text content column -->
                    <sf:GridTextColumn
                        MappingName="Text"
                        MinimumWidth="700"
                        TextWrapping="WrapWithOverflow" />
                </sf:SfDataGrid.Columns>
            </sf:SfDataGrid>
            <!-- Action buttons for confirming or canceling the delete operation -->
            <iwk:SimpleStackPanel
                Grid.Row="2"
                HorizontalAlignment="Center"
                Orientation="Horizontal"
                Spacing="16">
                <!-- Delete confirmation button -->
                <Button
                    MinWidth="100"
                    HorizontalAlignment="Right"
                    Command="{Binding DeleteCommand}"
                    Content="{I18N {x:Static l:LangKeys.DeleteBtnContent}}" />
                <!-- Cancel button -->
                <Button
                    MinWidth="100"
                    HorizontalAlignment="Left"
                    Command="{Binding CancelCommand}"
                    Content="{I18N {x:Static l:LangKeys.CancelBtnContent}}" />
            </iwk:SimpleStackPanel>
        </Grid>
    </Grid>
</Window>