<Window
    x:Class="Witcher3StringEditor.Dialogs.Views.DeleteDataDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="clr-namespace:Witcher3StringEditor.Dialogs.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:iwk="http://schemas.inkore.net/lib/ui/wpf"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sf="http://schemas.syncfusion.com/wpf"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:vm="clr-namespace:Witcher3StringEditor.Dialogs.ViewModels"
    Title="{lex:Loc DeleteDialogTitle}"
    Width="1200"
    Height="800"
    d:DataContext="{d:DesignInstance Type=vm:DeleteDataDialogViewModel}"
    lex:LocalizeDictionary.DesignCulture="en"
    lex:ResxLocalizationProvider.DefaultAssembly="Witcher3StringEditor.Dialogs"
    lex:ResxLocalizationProvider.DefaultDictionary="Strings"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid>
        <Border Margin="16,24">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock Text="{lex:Loc DeleteDialogMessage}" />
                <sf:SfDataGrid
                    x:Name="sfDataGrid"
                    Grid.Row="1"
                    Margin="0,16"
                    AllowDeleting="False"
                    AllowEditing="False"
                    AllowResizingColumns="True"
                    AutoGenerateColumns="False"
                    ColumnSizer="AutoWithLastColumnFill"
                    ItemsSource="{Binding W3Items}"
                    NavigationMode="Row"
                    RowHeight="30"
                    ShowRowHeader="True">
                    <sf:SfDataGrid.Resources>
                        <ResourceDictionary>
                            <Style TargetType="sf:GridRowHeaderCell">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="sf:GridRowHeaderCell">
                                            <Border
                                                x:Name="PART_RowHeaderCellBorder"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                                <Grid>
                                                    <TextBlock
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Text="{Binding RowIndex, RelativeSource={RelativeSource TemplatedParent}}"
                                                        TextAlignment="Center" />
                                                </Grid>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ResourceDictionary>
                    </sf:SfDataGrid.Resources>
                    <i:Interaction.Behaviors>
                        <b:SfDataGridSizeChangedBehavior />
                        <b:SfDataGridQueryRowHeightBehavior MinHeight="{Binding RowHeight, ElementName=sfDataGrid}" />
                    </i:Interaction.Behaviors>
                    <sf:SfDataGrid.Columns>
                        <sf:GridTextColumn
                            MinimumWidth="100"
                            HeaderText="ID"
                            MappingName="StrId"
                            TextAlignment="Center" />
                        <sf:GridTextColumn
                            MinimumWidth="100"
                            HeaderText="Key(Hex)"
                            MappingName="KeyHex"
                            TextAlignment="Center" />
                        <sf:GridTextColumn
                            MinimumWidth="200"
                            HeaderText="Key(String)"
                            MappingName="KeyName"
                            TextAlignment="Center" />
                        <sf:GridTextColumn MinimumWidth="700" MappingName="Text" TextWrapping="WrapWithOverflow" />
                    </sf:SfDataGrid.Columns>
                </sf:SfDataGrid>
                <iwk:SimpleStackPanel
                    Grid.Row="2"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="16">
                    <Button
                        MinWidth="100"
                        HorizontalAlignment="Right"
                        Command="{Binding DeleteCommand}"
                        Content="{lex:Loc DeleteBtnContent}" />
                    <Button
                        MinWidth="100"
                        HorizontalAlignment="Left"
                        Command="{Binding CancelCommand}"
                        Content="{lex:Loc CancelBtnContent}" />
                </iwk:SimpleStackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>