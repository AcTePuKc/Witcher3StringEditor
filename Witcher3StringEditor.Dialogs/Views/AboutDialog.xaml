<Window
    x:Class="Witcher3StringEditor.Dialogs.Views.AboutDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:g="clr-namespace:System.Globalization;assembly=mscorlib"
    xmlns:l="clr-namespace:Witcher3StringEditor.Locales;assembly=Witcher3StringEditor.Locales"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:vm="clr-namespace:Witcher3StringEditor.Dialogs.ViewModels"
    xmlns:sf="http://schemas.syncfusion.com/wpf"
    xmlns:data="clr-namespace:Syncfusion.Data;assembly=Syncfusion.Data.WPF"
    xmlns:sortComparers="clr-namespace:Witcher3StringEditor.Dialogs.SortComparers"
    Title="{I18N {x:Static l:LangKeys.AboutDialogTitle}}"
    Width="800"
    Height="800"
    d:DataContext="{d:DesignInstance Type=vm:AboutDialogViewModel}"
    ui:TitleBar.ExtendViewIntoTitleBar="True"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    WindowChrome.IsHitTestVisibleInChrome="True"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <sortComparers:VersionStringSortCompare x:Key="VersionStringSortCompare" />
        </ResourceDictionary>
    </Window.Resources>
    <!-- 
        Main grid layout for the about dialog
        Contains two rows: title bar area and content area
    -->
    <Grid>
        <Grid.RowDefinitions>
            <!-- Title bar row -->
            <RowDefinition Height="48" />
            <!-- Content area row -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!-- Title text displayed in the title bar area -->
        <TextBlock
            Margin="20,0,0,0"
            VerticalAlignment="Center"
            Text="{I18N {x:Static l:LangKeys.AboutDialogTitle}}" />
        <!-- Content grid containing application information -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <!-- Application info section -->
                <RowDefinition Height="Auto" />
                <!-- Dependencies list section -->
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <!-- Icon column -->
                <ColumnDefinition Width="Auto" />
                <!-- Application info column -->
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!-- Application icon displayed in the top left -->
            <ui:FontIcon
                Width="100"
                Margin="16,16,16,0"
                FontSize="50"
                Icon="{x:Static ui:SegoeFluentIcons.Info}" />
            <!-- Grid containing application information details -->
            <Grid
                Grid.Row="0"
                Grid.Column="1"
                Margin="0,16,0,0"
                VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="16" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="16" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="16" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <!-- Version label and value -->
                <TextBlock HorizontalAlignment="Right" Text="{I18N {x:Static l:LangKeys.Version}}" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="2"
                    Text="{Binding AboutInfo[Version],Mode=OneTime}" />
                <!-- Build time label and value -->
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    HorizontalAlignment="Right"
                    Text="{I18N {x:Static l:LangKeys.AppBuildTime}}" />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="2"
                    Text="{Binding AboutInfo[BuildTime], ConverterCulture={x:Static g:CultureInfo.CurrentCulture},Mode=OneTime}" />
                <!-- OS label and value -->
                <TextBlock
                    Grid.Row="4"
                    Grid.Column="0"
                    HorizontalAlignment="Right"
                    Text="{I18N {x:Static l:LangKeys.OS}}" />
                <TextBlock
                    Grid.Row="4"
                    Grid.Column="2"
                    Text="{Binding AboutInfo[OS],Mode=OneTime}" />
                <!-- Runtime label and value -->
                <TextBlock
                    Grid.Row="6"
                    Grid.Column="0"
                    HorizontalAlignment="Right"
                    Text="{I18N {x:Static l:LangKeys.Runtime}}" />
                <TextBlock
                    Grid.Row="6"
                    Grid.Column="2"
                    Text="{Binding AboutInfo[Runtime],Mode=OneTime}" />
            </Grid>
            <!-- Dependencies list -->
            <sf:SfDataGrid
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="16"
                RowHeight="28"
                ColumnSizer="AutoWithLastColumnFill"
                AutoGenerateColumns="False"
                AllowResizingColumns="True"
                ItemsSource="{Binding AboutInfo[Package],Mode=OneTime}">
                <!-- Sort comparer for version strings -->
                <sf:SfDataGrid.SortComparers>
                    <data:SortComparer Comparer="{StaticResource VersionStringSortCompare}" />
                </sf:SfDataGrid.SortComparers>
                <!-- Package name and version columns -->
                <sf:SfDataGrid.Columns>
                    <sf:GridTextColumn HeaderText="{I18N {x:Static l:LangKeys.PackageName}}" MappingName="Name" />
                    <sf:GridTextColumn HeaderText="{I18N {x:Static l:LangKeys.PackageVersion}}" MappingName="Version"
                                       Width="200" />
                </sf:SfDataGrid.Columns>
            </sf:SfDataGrid>
        </Grid>
    </Grid>
</Window>