<Window
    x:Class="Witcher3StringEditor.Dialogs.Views.AboutDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dm="clr-namespace:Microsoft.Extensions.DependencyModel;assembly=Microsoft.Extensions.DependencyModel"
    xmlns:g="clr-namespace:System.Globalization;assembly=mscorlib"
    xmlns:l="clr-namespace:Witcher3StringEditor.Locales;assembly=Witcher3StringEditor.Locales"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:vm="clr-namespace:Witcher3StringEditor.Dialogs.ViewModels"
    Title="{I18N {x:Static l:LangKeys.AboutDialogTitle}}"
    Width="800"
    Height="800"
    d:DataContext="{d:DesignInstance Type=vm:AboutDialogViewModel}"
    ui:TitleBar.ExtendViewIntoTitleBar="True"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    WindowChrome.IsHitTestVisibleInChrome="True"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Margin="20,0,0,0"
            VerticalAlignment="Center"
            Text="{I18N {x:Static l:LangKeys.AboutDialogTitle}}" />
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ui:FontIcon
                Width="100"
                Margin="16,16,16,0"
                FontSize="50"
                Glyph="&#xE946;" />
            <Grid
                Grid.Row="0"
                Grid.Column="1"
                Margin="0,16,0,0"
                VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="16" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="16" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="16" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock HorizontalAlignment="Right" Text="{I18N {x:Static l:LangKeys.Version}}" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="2"
                    Text="{Binding AboutInfo[Version],Mode=OneTime}" />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    HorizontalAlignment="Right"
                    Text="{I18N {x:Static l:LangKeys.AppBuildTime}}" />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="2"
                    Text="{Binding AboutInfo[BuildTime], ConverterCulture={x:Static g:CultureInfo.CurrentCulture},Mode=OneTime}" />
                <TextBlock
                    Grid.Row="4"
                    Grid.Column="0"
                    HorizontalAlignment="Right"
                    Text="{I18N {x:Static l:LangKeys.OS}}" />
                <TextBlock
                    Grid.Row="4"
                    Grid.Column="2"
                    Text="{Binding AboutInfo[OS],Mode=OneTime}" />
                <TextBlock
                    Grid.Row="6"
                    Grid.Column="0"
                    HorizontalAlignment="Right"
                    Text="{I18N {x:Static l:LangKeys.Runtime}}" />
                <TextBlock
                    Grid.Row="6"
                    Grid.Column="2"
                    Text="{Binding AboutInfo[Runtime],Mode=OneTime}" />
            </Grid>
            <ScrollViewer
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="16"
                BorderBrush="LightGray"
                BorderThickness="1">
                <ItemsControl ItemsSource="{Binding AboutInfo[Package],Mode=OneTime}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type dm:Dependency}">
                            <StackPanel Margin="16,16,0,0" Orientation="Horizontal">
                                <TextBlock Text="{Binding Name}" />
                                <TextBlock Margin="12,0,0,0" Text="{Binding Version}" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>