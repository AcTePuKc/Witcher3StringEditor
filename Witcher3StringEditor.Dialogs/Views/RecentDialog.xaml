<Window
    x:Class="Witcher3StringEditor.Dialogs.Views.RecentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="clr-namespace:Witcher3StringEditor.Dialogs.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:local="clr-namespace:Witcher3StringEditor.Dialogs.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sf="http://schemas.syncfusion.com/wpf"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    Title="{lex:Loc RecentDialogTitle}"
    Width="800"
    Height="450"
    lex:LocalizeDictionary.DesignCulture="en"
    lex:ResxLocalizationProvider.DefaultAssembly="Witcher3StringEditor.Dialogs"
    lex:ResxLocalizationProvider.DefaultDictionary="Strings"
    ui:WindowHelper.SystemBackdropType="None"
    ui:WindowHelper.UseModernWindowStyle="True"
    mc:Ignorable="d">
    <Window.Resources>
        <ControlTemplate x:Key="PinCheckBoxTemplate" TargetType="CheckBox">
            <Grid>
                <ui:FontIcon x:Name="iconElement" Glyph="&#xe77a;" />
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter TargetName="iconElement" Property="Glyph" Value="&#xe840;" />
                </Trigger>
                <Trigger Property="IsChecked" Value="{x:Null}">
                    <Setter TargetName="iconElement" Property="Glyph" Value="&#xe77a;" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>
    <Grid Margin="10">
        <sf:SfDataGrid
            AllowDeleting="True"
            AutoGenerateColumns="False"
            ColumnSizer="AutoWithLastColumnFill">
            <i:Interaction.Behaviors>
                <b:SfDataGridSizeChangedBehavior />
                <b:SfDataGridQueryRowHeightBehavior />
                <b:SfDataGridRecordDeletingBehavior />
            </i:Interaction.Behaviors>
            <sf:SfDataGrid.Columns>
                <sf:GridTextColumn Width="150" HeaderText="{lex:Loc FileName}" />
                <sf:GridDateTimeColumn Width="150" HeaderText="{lex:Loc OpenedTime}" />
                <sf:GridTemplateColumn Width="100" HeaderText="{lex:Loc IsPin}">
                    <sf:GridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox Template="{StaticResource PinCheckBoxTemplate}" />
                        </DataTemplate>
                    </sf:GridTemplateColumn.CellTemplate>
                </sf:GridTemplateColumn>
                <sf:GridTextColumn HeaderText="{lex:Loc Path}" />
            </sf:SfDataGrid.Columns>
        </sf:SfDataGrid>
    </Grid>
</Window>
