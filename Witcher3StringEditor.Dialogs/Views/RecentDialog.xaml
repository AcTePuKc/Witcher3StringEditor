<Window
    x:Class="Witcher3StringEditor.Dialogs.Views.RecentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="clr-namespace:Witcher3StringEditor.Dialogs.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:l="clr-namespace:Witcher3StringEditor.Locales;assembly=Witcher3StringEditor.Locales"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sf="http://schemas.syncfusion.com/wpf"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:vm="clr-namespace:Witcher3StringEditor.Dialogs.ViewModels"
    xmlns:abstractions="clr-namespace:Witcher3StringEditor.Common.Abstractions;assembly=Witcher3StringEditor.Common"
    Title="{I18N {x:Static l:LangKeys.RecentDialogTitle}}"
    Width="1200"
    Height="800"
    d:DataContext="{d:DesignInstance Type=vm:RecentDialogViewModel}"
    ui:TitleBar.ExtendViewIntoTitleBar="True"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    Closed="RecentDialog_OnClosed"
    WindowChrome.IsHitTestVisibleInChrome="True"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <!-- 
        Window resources containing custom control templates
    -->
    <Window.Resources>
        <!-- 
            Custom checkbox template for pin/unpin functionality
            Uses FontIcon to display pin/unpin states
        -->
        <ControlTemplate x:Key="PinCheckBoxTemplate" TargetType="CheckBox">
            <Grid>
                <ui:FontIcon x:Name="iconElement" Glyph="&#xe734;" />
            </Grid>
            <ControlTemplate.Triggers>
                <!-- When checkbox is checked, show pinned icon -->
                <Trigger Property="IsChecked" Value="True">
                    <Setter TargetName="iconElement" Property="ui:FontIcon.Glyph" Value="&#xe735;" />
                </Trigger>
                <!-- When checkbox is indeterminate, show unpinned icon -->
                <Trigger Property="IsChecked" Value="{x:Null}">
                    <Setter TargetName="iconElement" Property="ui:FontIcon.Glyph" Value="&#xe734;" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>

    <!-- 
        Main grid layout for the recent files dialog
        Contains three rows: title bar, data grid, and pager controls
    -->
    <Grid>
        <Grid.RowDefinitions>
            <!-- Title bar row -->
            <RowDefinition Height="48" />
            <!-- Data grid row -->
            <RowDefinition Height="*" />
            <!-- Pager controls row -->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title bar area containing the dialog title and search box -->
        <Grid Height="48">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Dialog title text -->
            <TextBlock
                Grid.Column="0"
                Margin="20,0,0,0"
                VerticalAlignment="Center"
                Text="{I18N {x:Static l:LangKeys.RecentDialogTitle}}" />

            <!-- Search box for filtering recent items -->
            <ui:AutoSuggestBox
                Grid.Column="1"
                VerticalAlignment="Center"
                PlaceholderText="{I18N {x:Static l:LangKeys.SearchBoxPlaceholderText}}"
                QuerySubmitted="SearchBox_QuerySubmitted"
                TextChanged="SearchBox_TextChanged">
                <ui:AutoSuggestBox.QueryIcon>
                    <ui:FontIcon Glyph="&#xe721;" />
                </ui:AutoSuggestBox.QueryIcon>
            </ui:AutoSuggestBox>
        </Grid>

        <!-- Data grid displaying recent files -->
        <sf:SfDataGrid
            x:Name="SfDataGrid"
            Grid.Row="1"
            Margin="16,16,16,0"
            AllowDeleting="True"
            AllowResizingColumns="True"
            AutoGenerateColumns="False"
            ItemsSource="{Binding PagedSource, ElementName=SfDataPager, Mode=TwoWay}"
            NavigationMode="Row"
            RowHeight="30"
            SelectionMode="Extended"
            ShowRowHeader="True">

            <!-- Data grid resources for customizing row header appearance -->
            <sf:SfDataGrid.Resources>
                <ResourceDictionary>
                    <!-- Style for row header cells to display row numbers -->
                    <Style TargetType="sf:GridRowHeaderCell">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="sf:GridRowHeaderCell">
                                    <Border
                                        x:Name="PART_RowHeaderCellBorder"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                        <Grid>
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Text="{Binding RowIndex, RelativeSource={RelativeSource TemplatedParent}}"
                                                TextAlignment="Center" />
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ResourceDictionary>
            </sf:SfDataGrid.Resources>

            <!-- Interaction behaviors for handling grid operations -->
            <i:Interaction.Behaviors>
                <!-- Behavior to handle grid size changes -->
                <b:SfDataGridSizeChangedBehavior />
                <!-- Behavior to handle row height queries -->
                <b:SfDataGridQueryRowHeightBehavior MinHeight="{Binding ElementName=SfDataGrid, Path=RowHeight}" />
                <!-- Behavior to handle record deletion -->
                <b:SfDataGridRecordDeletingBehavior />
            </i:Interaction.Behaviors>

            <!-- Data grid columns definition -->
            <sf:SfDataGrid.Columns>
                <!-- File path column -->
                <sf:GridTextColumn
                    ColumnSizer="AutoWithLastColumnFill"
                    HeaderText="{I18N {x:Static l:LangKeys.Path}}"
                    MappingName="FilePath"
                    MinimumWidth="700"
                    TextWrapping="WrapWithOverflow" />

                <!-- Opened time column -->
                <sf:GridDateTimeColumn
                    ColumnSizer="SizeToHeader"
                    HeaderText="{I18N {x:Static l:LangKeys.OpenedTime}}"
                    MappingName="OpenedTime"
                    MinimumWidth="200"
                    Pattern="FullDateTime"
                    TextAlignment="Center" />

                <!-- Mark/pin column with custom checkbox template -->
                <sf:GridTemplateColumn
                    HorizontalAlignment="Center"
                    ColumnSizer="SizeToHeader"
                    HeaderText="{I18N {x:Static l:LangKeys.Mark}}"
                    MappingName="IsMarked"
                    MinimumWidth="100">
                    <sf:GridTemplateColumn.CellTemplate>
                        <DataTemplate DataType="{x:Type abstractions:IRecentItem}">
                            <CheckBox
                                HorizontalAlignment="Center"
                                IsChecked="{Binding IsMarked}"
                                Template="{StaticResource PinCheckBoxTemplate}" />
                        </DataTemplate>
                    </sf:GridTemplateColumn.CellTemplate>
                </sf:GridTemplateColumn>

                <!-- Open file button column -->
                <sf:GridTemplateColumn
                    HorizontalAlignment="Center"
                    AllowSorting="False"
                    ColumnSizer="SizeToHeader"
                    HeaderText="{I18N {x:Static l:LangKeys.Open}}"
                    MappingName="Null"
                    MinimumWidth="100">
                    <sf:GridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button
                                HorizontalAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}, Path=DataContext.OpenCommand}"
                                CommandParameter="{Binding}">
                                <ui:FontIcon Glyph="&#xe8ad;" />
                            </Button>
                        </DataTemplate>
                    </sf:GridTemplateColumn.CellTemplate>
                </sf:GridTemplateColumn>
            </sf:SfDataGrid.Columns>
        </sf:SfDataGrid>

        <!-- Data pager for pagination of recent items -->
        <sf:SfDataPager
            x:Name="SfDataPager"
            Grid.Row="2"
            Margin="0,4"
            HorizontalAlignment="Center"
            NumericButtonCount="10"
            PageSize="30"
            Source="{Binding AppSettings.RecentItems}" />
    </Grid>
</Window>