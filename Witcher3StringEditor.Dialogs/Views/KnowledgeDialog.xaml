<Window
    x:Class="Witcher3StringEditor.Dialogs.Views.KnowledgeDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:local="clr-namespace:Witcher3StringEditor.Dialogs.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sf="http://schemas.syncfusion.com/wpf"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:vm="clr-namespace:Witcher3StringEditor.Dialogs.ViewModels"
    Title="KnowledgeDialog"
    Width="1200"
    Height="800"
    lex:LocalizeDictionary.DesignCulture="en"
    lex:ResxLocalizationProvider.DefaultAssembly="Witcher3StringEditor.Dialogs"
    lex:ResxLocalizationProvider.DefaultDictionary="Strings"
    ui:TitleBar.ExtendViewIntoTitleBar="True"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    WindowChrome.IsHitTestVisibleInChrome="True"
    mc:Ignorable="d">
    <Window.DataContext>
        <vm:KnowledgeDialogViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Height="48">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                Margin="20,0,0,0"
                VerticalAlignment="Center"
                Text="{lex:Loc KnowledgeDialogTitle}" />
            <ui:AutoSuggestBox
                Grid.Column="1"
                VerticalAlignment="Center"
                PlaceholderText="{lex:Loc SearchBoxPlaceholderText}">
                <ui:AutoSuggestBox.QueryIcon>
                    <ui:FontIcon Glyph="&#xe721;" />
                </ui:AutoSuggestBox.QueryIcon>
            </ui:AutoSuggestBox>
        </Grid>
        <ui:CommandBar Grid.Row="1" HorizontalAlignment="Left">
            <ui:AppBarButton Label="{lex:Loc ImportKnowledgeBtnContent}">
                <ui:AppBarButton.Icon>
                    <ui:FontIcon Glyph="&#xe8b5;" />
                </ui:AppBarButton.Icon>
            </ui:AppBarButton>
            <ui:AppBarButton Label="{lex:Loc DelKnowledgeBtnContent}">
                <ui:AppBarButton.Icon>
                    <ui:FontIcon Glyph="&#xe74d;" />
                </ui:AppBarButton.Icon>
            </ui:AppBarButton>
            <ui:AppBarButton Label="{lex:Loc ClearKnowledgeBtnContent}">
                <ui:AppBarButton.Icon>
                    <ui:FontIcon Glyph="&#xe894;" />
                </ui:AppBarButton.Icon>
            </ui:AppBarButton>
        </ui:CommandBar>
        <sf:SfDataGrid Grid.Row="2" Margin="16,16,16,0" />
        <sf:SfDataPager
            Grid.Row="3"
            Margin="0,4"
            HorizontalAlignment="Center" />
    </Grid>
</Window>
