<Window
    x:Class="Witcher3StringEditor.Dialogs.Views.EditDataDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iwk="http://schemas.inkore.net/lib/ui/wpf"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:vm="clr-namespace:Witcher3StringEditor.Dialogs.ViewModels"
    Title="{Binding Title}"
    Width="800"
    Height="800"
    d:DataContext="{d:DesignInstance Type=vm:EditDataDialogViewModel}"
    lex:LocalizeDictionary.DesignCulture="en"
    lex:ResxLocalizationProvider.DefaultAssembly="Witcher3StringEditor.Dialogs"
    lex:ResxLocalizationProvider.DefaultDictionary="Strings"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    mc:Ignorable="d">
    <Grid>
        <Border Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <iwk:SimpleStackPanel Spacing="16">
                    <TextBox ui:ControlHelper.Header="ID" Text="{Binding W3Item.StrId, FallbackValue=''}" />
                    <TextBox ui:ControlHelper.Header="Key(Hex)" Text="{Binding W3Item.KeyHex, FallbackValue=''}" />
                    <TextBox ui:ControlHelper.Header="Key(String)" Text="{Binding W3Item.KeyName, FallbackValue=''}" />
                </iwk:SimpleStackPanel>
                <TextBox
                    Grid.Row="1"
                    Margin="0,16"
                    ui:ControlHelper.Header="Text"
                    Text="{Binding W3Item.Text, FallbackValue=''}"
                    TextWrapping="WrapWithOverflow" />
                <Grid Grid.Row="2" Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        MinWidth="100"
                        HorizontalAlignment="Right"
                        Command="{Binding SubmitCommand}"
                        Content="{lex:Loc SubmitBtnContent}" />
                    <Button
                        Grid.Column="2"
                        MinWidth="100"
                        HorizontalAlignment="Left"
                        Command="{Binding CancelCommand}"
                        Content="{lex:Loc CancelBtnContent}" />
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>