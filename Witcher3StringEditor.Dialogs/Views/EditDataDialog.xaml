<Window
    x:Class="Witcher3StringEditor.Dialogs.Views.EditDataDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iwk="http://schemas.inkore.net/lib/ui/wpf"
    xmlns:l="clr-namespace:Witcher3StringEditor.Locales;assembly=Witcher3StringEditor.Locales"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:vm="clr-namespace:Witcher3StringEditor.Dialogs.ViewModels"
    Title="{Binding Title}"
    Width="800"
    Height="800"
    d:DataContext="{d:DesignInstance Type=vm:EditDataDialogViewModel}"
    ui:TitleBar.ExtendViewIntoTitleBar="True"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    WindowChrome.IsHitTestVisibleInChrome="True"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Margin="20,0,0,0"
            VerticalAlignment="Center"
            Text="{Binding Title}" />
        <Grid Grid.Row="1" Margin="24,16,24,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <iwk:SimpleStackPanel Spacing="16">
                <TextBox ui:ControlHelper.Header="ID" Text="{Binding Item.StrId, FallbackValue=''}" />
                <TextBox ui:ControlHelper.Header="Key(Hex)" Text="{Binding Item.KeyHex, FallbackValue=''}" />
                <TextBox ui:ControlHelper.Header="Key(String)" Text="{Binding Item.KeyName, FallbackValue=''}" />
            </iwk:SimpleStackPanel>
            <TextBox
                Grid.Row="1"
                Margin="0,16,0,0"
                ui:ControlHelper.Header="Text"
                Text="{Binding Item.Text, FallbackValue=''}"
                TextWrapping="WrapWithOverflow" />
            <iwk:SimpleStackPanel
                Grid.Row="2"
                Margin="0,24,0,0"
                HorizontalAlignment="Center"
                Orientation="Horizontal"
                Spacing="16">
                <Button
                    MinWidth="100"
                    Command="{Binding SubmitCommand}"
                    Content="{I18N {x:Static l:LangKeys.SubmitBtnContent}}" />
                <Button
                    MinWidth="100"
                    Command="{Binding CancelCommand}"
                    Content="{I18N {x:Static l:LangKeys.CancelBtnContent}}" />
            </iwk:SimpleStackPanel>
        </Grid>
    </Grid>
</Window>