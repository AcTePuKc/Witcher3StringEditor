<Window
    x:Class="Witcher3StringEditor.Dialogs.Views.EditDataDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iwk="http://schemas.inkore.net/lib/ui/wpf"
    xmlns:l="clr-namespace:Witcher3StringEditor.Locales;assembly=Witcher3StringEditor.Locales"
    xmlns:i18n="clr-namespace:System.Windows;assembly=Antelcat.I18N.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:vm="clr-namespace:Witcher3StringEditor.Dialogs.ViewModels"
    Title="{Binding Title}"
    Width="800"
    Height="800"
    d:DataContext="{d:DesignInstance Type=vm:EditDataDialogViewModel}"
    ui:TitleBar.ExtendViewIntoTitleBar="True"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    WindowChrome.IsHitTestVisibleInChrome="True"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <!-- 
        Main grid layout for the edit data dialog
        Contains two rows: title bar and content area
    -->
    <Grid>
        <Grid.RowDefinitions>
            <!-- Title bar row -->
            <RowDefinition Height="48" />
            <!-- Content area row -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!-- Title text displayed in the title bar area -->
        <TextBlock
            Margin="20,0,0,0"
            VerticalAlignment="Center"
            Text="{Binding Title}" />
        <!-- Content grid containing the edit form and action buttons -->
        <Grid Grid.Row="1" Margin="24,16,24,24">
            <Grid.RowDefinitions>
                <!-- Input fields row -->
                <RowDefinition Height="Auto" />
                <!-- Text content row -->
                <RowDefinition Height="*" />
                <!-- Action buttons row -->
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <!-- Input fields for ID and key information -->
            <iwk:SimpleStackPanel Spacing="16">
                <!-- String ID input field -->
                <TextBox ui:ControlHelper.Header="{i18n:I18N Key={x:Static l:LangKeys.ID}}" Text="{Binding Item.StrId, FallbackValue=''}" />
                <!-- Key in hexadecimal format input field -->
                <TextBox ui:ControlHelper.Header="{i18n:I18N Key={x:Static l:LangKeys.KeyHex}}" Text="{Binding Item.KeyHex, FallbackValue=''}" />
                <!-- Key name input field -->
                <TextBox ui:ControlHelper.Header="{i18n:I18N Key={x:Static l:LangKeys.KeyString}}" Text="{Binding Item.KeyName, FallbackValue=''}" />
            </iwk:SimpleStackPanel>
            <!-- Text content input field -->
            <TextBox
                Grid.Row="1"
                Margin="0,16,0,0"
                ui:ControlHelper.Header="{i18n:I18N Key={x:Static l:LangKeys.SrcTxt}}"
                Text="{Binding Item.Text, FallbackValue=''}"
                TextWrapping="WrapWithOverflow" />
            <!-- Action buttons for submitting or canceling the edit operation -->
            <iwk:SimpleStackPanel
                Grid.Row="2"
                Margin="0,24,0,0"
                HorizontalAlignment="Center"
                Orientation="Horizontal"
                Spacing="16">
                <!-- Submit button to save changes -->
                <Button
                    MinWidth="100"
                    Command="{Binding SubmitCommand}"
                    Content="{i18n:I18N Key={x:Static l:LangKeys.SubmitBtnContent}}" />
                <!-- Cancel button to discard changes -->
                <Button
                    MinWidth="100"
                    Command="{Binding CancelCommand}"
                    Content="{i18n:I18N Key={x:Static l:LangKeys.CancelBtnContent}}" />
            </iwk:SimpleStackPanel>
        </Grid>
    </Grid>
</Window>