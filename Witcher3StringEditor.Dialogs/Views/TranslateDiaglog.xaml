<Window
    x:Class="Witcher3StringEditor.Dialogs.Views.TranslateDiaglog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:iwk="http://schemas.inkore.net/lib/ui/wpf"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:vm="clr-namespace:Witcher3StringEditor.Dialogs.ViewModels"
    Title="{lex:Loc TranslateDialogTitle}"
    Width="800"
    Height="800"
    d:DataContext="{d:DesignInstance Type=vm:TranslateDiaglogViewModel}"
    lex:ResxLocalizationProvider.DefaultAssembly="Witcher3StringEditor.Dialogs"
    lex:ResxLocalizationProvider.DefaultDictionary="Strings"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    Closed="Window_Closed"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
        </ResourceDictionary>
    </Window.Resources>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closing">
            <i:InvokeCommandAction Command="{Binding ClosingCommand}" PassEventArgsToCommand="True" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="16" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="16" />
            <RowDefinition Height="*" />
            <RowDefinition Height="24" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="16" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Text="{lex:Loc SrcTxt}" />
        <TextBlock
            Grid.Row="0"
            Grid.Column="2"
            Text="{lex:Loc TranslatedTxt}" />
        <ComboBox
            Grid.Row="2"
            Grid.Column="0"
            HorizontalAlignment="Stretch"
            DisplayMemberPath="NativeName"
            ItemsSource="{Binding Languages}"
            SelectedValue="{Binding FormLanguage, Mode=TwoWay}" />
        <TextBox
            Grid.Row="4"
            Grid.Column="0"
            IsReadOnly="True"
            Text="{Binding CurrentTranslateItemModel.Text, FallbackValue=''}"
            TextWrapping="WrapWithOverflow" />
        <ComboBox
            Grid.Row="2"
            Grid.Column="2"
            HorizontalAlignment="Stretch"
            DisplayMemberPath="NativeName"
            ItemsSource="{Binding Languages}"
            SelectedValue="{Binding ToLanguage, Mode=TwoWay}" />
        <TextBox
            Grid.Row="4"
            Grid.Column="2"
            IsReadOnly="{Binding IsTranslating}"
            Text="{Binding CurrentTranslateItemModel.TranslatedText, FallbackValue=''}"
            TextWrapping="WrapWithOverflow">
            <TextBox.Style>
                <Style BasedOn="{StaticResource DefaultTextBoxStyle}" TargetType="TextBox">
                    <Setter Property="ui:ControlHelper.PlaceholderText" Value="{lex:Loc TranslateCharactersNumberLimit}" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsAiTranslator}" Value="True">
                            <Setter Property="ui:ControlHelper.PlaceholderText" Value="" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsTranslating}" Value="True">
                            <Setter Property="ui:ControlHelper.PlaceholderText" Value="{lex:Loc Translating}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>
        <iwk:SimpleStackPanel
            Grid.Row="6"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            HorizontalAlignment="Center"
            Orientation="Horizontal"
            Spacing="16">
            <Button
                MinWidth="100"
                HorizontalAlignment="Right"
                Command="{Binding PreviousCommand}"
                Content="{lex:Loc PreviousBtnContent}" />
            <Button
                MinWidth="100"
                HorizontalAlignment="Right"
                Command="{Binding TranslateCommand}"
                Content="{lex:Loc TranslateBtnContent}" />

            <Button
                MinWidth="100"
                HorizontalAlignment="Left"
                Command="{Binding SaveCommand}"
                Content="{lex:Loc SaveBtnContent}" />
            <Button
                MinWidth="100"
                HorizontalAlignment="Left"
                Command="{Binding NextCommand}"
                Content="{lex:Loc NextBtnContent}" />
        </iwk:SimpleStackPanel>
    </Grid>
</Window>