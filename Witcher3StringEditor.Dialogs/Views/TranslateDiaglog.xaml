<Window
    Closed="Window_Closed"
    Height="800"
    Title="{lex:Loc TranslateDialogTitle}"
    Width="800"
    d:DataContext="{d:DesignInstance Type=vm:TranslateDiaglogViewModel}"
    lex:ResxLocalizationProvider.DefaultAssembly="Witcher3StringEditor.Dialogs"
    lex:ResxLocalizationProvider.DefaultDictionary="Strings"
    mc:Ignorable="d"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    x:Class="Witcher3StringEditor.Dialogs.Views.TranslateDiaglog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:iwk="http://schemas.inkore.net/lib/ui/wpf"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:vm="clr-namespace:Witcher3StringEditor.Dialogs.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closing">
            <i:InvokeCommandAction Command="{Binding ClosingCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="16" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="16" />
            <RowDefinition Height="*" />
            <RowDefinition Height="16" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="16" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock
            Grid.Column="0"
            Grid.Row="0"
            Text="{lex:Loc SrcTxt}" />
        <TextBlock
            Grid.Column="2"
            Grid.Row="0"
            Text="{lex:Loc TranslatedTxt}" />
        <ComboBox
            DisplayMemberPath="NativeName"
            Grid.Column="0"
            Grid.Row="2"
            HorizontalAlignment="Stretch"
            ItemsSource="{Binding Languages}"
            SelectedValue="{Binding FormLanguage, Mode=TwoWay}" />
        <TextBox
            Grid.Column="0"
            Grid.Row="4"
            IsReadOnly="True"
            Text="{Binding CurrentTranslateItemModel.Text, FallbackValue=''}"
            TextWrapping="WrapWithOverflow" />
        <ComboBox
            DisplayMemberPath="NativeName"
            Grid.Column="2"
            Grid.Row="2"
            HorizontalAlignment="Stretch"
            ItemsSource="{Binding Languages}"
            SelectedValue="{Binding ToLanguage, Mode=TwoWay}" />
        <TextBox
            Grid.Column="2"
            Grid.Row="4"
            Text="{Binding CurrentTranslateItemModel.TranslatedText, FallbackValue=''}"
            TextWrapping="WrapWithOverflow"
            ui:ControlHelper.PlaceholderText="{lex:Loc TranslateCharactersNumberLimit}" />
        <iwk:SimpleStackPanel
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Grid.Row="6"
            HorizontalAlignment="Center"
            Orientation="Horizontal"
            Spacing="16">
            <Button
                Command="{Binding PreviousCommand}"
                Content="{lex:Loc PreviousBtnContent}"
                HorizontalAlignment="Right"
                MinWidth="100" />
            <Button
                Command="{Binding TranslateCommand}"
                Content="{lex:Loc TranslateBtnContent}"
                HorizontalAlignment="Right"
                MinWidth="100" />

            <Button
                Command="{Binding SaveCommand}"
                Content="{lex:Loc SaveBtnContent}"
                HorizontalAlignment="Left"
                MinWidth="100" />
            <Button
                Command="{Binding NextCommand}"
                Content="{lex:Loc NextBtnContent}"
                HorizontalAlignment="Left"
                MinWidth="100" />
        </iwk:SimpleStackPanel>
    </Grid>
</Window>