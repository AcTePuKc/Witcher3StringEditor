<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:iwk="http://schemas.inkore.net/lib/ui/wpf"
    xmlns:c="clr-namespace:Witcher3StringEditor.Dialogs.Converters"
    xmlns:l="clr-namespace:Witcher3StringEditor.Locales;assembly=Witcher3StringEditor.Locales"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:vm="clr-namespace:Witcher3StringEditor.Dialogs.ViewModels">
    <DataTemplate x:Key="TranslateDataTemplate" DataType="{x:Type vm:SingleTranslationViewModel}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="16" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="16" />
                <RowDefinition Height="*" />
                <RowDefinition Height="24" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Text="{I18N {x:Static l:LangKeys.SrcTxt}}" />
            <TextBlock
                Grid.Row="0"
                Grid.Column="2"
                Text="{I18N {x:Static l:LangKeys.TranslatedTxt}}" />
            <ComboBox
                Grid.Row="2"
                Grid.Column="0"
                HorizontalAlignment="Stretch"
                DisplayMemberPath="NativeName"
                ItemsSource="{Binding Languages}"
                SelectedValue="{Binding FormLanguage, Mode=TwoWay}" />
            <TextBox
                Grid.Row="4"
                Grid.Column="0"
                IsReadOnly="True"
                Text="{Binding CurrentTranslateItemModel.Text, FallbackValue=''}"
                TextWrapping="WrapWithOverflow" />
            <ComboBox
                Grid.Row="2"
                Grid.Column="2"
                HorizontalAlignment="Stretch"
                DisplayMemberPath="NativeName"
                ItemsSource="{Binding Languages}"
                SelectedValue="{Binding ToLanguage, Mode=TwoWay}" />
            <TextBox
                Grid.Row="4"
                Grid.Column="2"
                IsReadOnly="{Binding IsBusy}"
                Text="{Binding CurrentTranslateItemModel.TranslatedText, FallbackValue=''}"
                TextWrapping="WrapWithOverflow">
                <TextBox.Resources>
                    <c:LangKeyToStringConverter x:Key="LangKeyToStringConverter" />
                </TextBox.Resources>
                <TextBox.Style>
                    <!-- ReSharper disable once Xaml.StaticResourceNotResolved -->
                    <Style BasedOn="{StaticResource DefaultTextBoxStyle}" TargetType="TextBox">
                        <Setter Property="ui:ControlHelper.PlaceholderText" Value="" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsBusy}" Value="True">
                                <Setter Property="ui:ControlHelper.PlaceholderText"
                                        Value="{Binding Source={x:Static l:LangKeys.Translating} ,Converter={StaticResource LangKeyToStringConverter}}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>
            <iwk:SimpleStackPanel
                Grid.Row="6"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                HorizontalAlignment="Center"
                Orientation="Horizontal"
                Spacing="16">
                <Button
                    MinWidth="100"
                    HorizontalAlignment="Right"
                    Command="{Binding PreviousCommand}"
                    Content="{I18N {x:Static l:LangKeys.PreviousBtnContent}}" />
                <Button
                    MinWidth="100"
                    HorizontalAlignment="Right"
                    Command="{Binding TranslateCommand}"
                    Content="{I18N {x:Static l:LangKeys.TranslateBtnContent}}" />

                <Button
                    MinWidth="100"
                    HorizontalAlignment="Left"
                    Command="{Binding SaveCommand}"
                    Content="{I18N {x:Static l:LangKeys.SaveBtnContent}}" />
                <Button
                    MinWidth="100"
                    HorizontalAlignment="Left"
                    Command="{Binding NextCommand}"
                    Content="{I18N {x:Static l:LangKeys.NextBtnContent}}" />
            </iwk:SimpleStackPanel>
        </Grid>
    </DataTemplate>
</ResourceDictionary>