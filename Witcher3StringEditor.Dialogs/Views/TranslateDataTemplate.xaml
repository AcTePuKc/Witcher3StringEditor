<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:iwk="http://schemas.inkore.net/lib/ui/wpf"
    xmlns:lex="https://github.com/XAMLMarkupExtensions/WPFLocalizationExtension"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:vm="clr-namespace:Witcher3StringEditor.Dialogs.ViewModels">
    <DataTemplate x:Key="TranslateDataTemplate" DataType="{x:Type vm:TranslateContentViewModel}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="16" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="16" />
                <RowDefinition Height="*" />
                <RowDefinition Height="24" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Text="{lex:Loc SrcTxt}" />
            <TextBlock
                Grid.Row="0"
                Grid.Column="2"
                Text="{lex:Loc TranslatedTxt}" />
            <ComboBox
                Grid.Row="2"
                Grid.Column="0"
                HorizontalAlignment="Stretch"
                DisplayMemberPath="NativeName"
                ItemsSource="{Binding Languages}"
                SelectedValue="{Binding FormLanguage, Mode=TwoWay}" />
            <TextBox
                Grid.Row="4"
                Grid.Column="0"
                IsReadOnly="True"
                Text="{Binding CurrentTranslateItemModel.Text, FallbackValue=''}"
                TextWrapping="WrapWithOverflow" />
            <ComboBox
                Grid.Row="2"
                Grid.Column="2"
                HorizontalAlignment="Stretch"
                DisplayMemberPath="NativeName"
                ItemsSource="{Binding Languages}"
                SelectedValue="{Binding ToLanguage, Mode=TwoWay}" />
            <TextBox
                Grid.Row="4"
                Grid.Column="2"
                IsReadOnly="{Binding IsBusy}"
                Text="{Binding CurrentTranslateItemModel.TranslatedText, FallbackValue=''}"
                TextWrapping="WrapWithOverflow">
                <TextBox.Style>
                    <Style BasedOn="{StaticResource DefaultTextBoxStyle}" TargetType="TextBox">
                        <Setter Property="ui:ControlHelper.PlaceholderText" Value="{lex:Loc TranslateCharactersNumberLimit}" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsAiTranslator}" Value="True">
                                <Setter Property="ui:ControlHelper.PlaceholderText" Value="" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsBusy}" Value="True">
                                <Setter Property="ui:ControlHelper.PlaceholderText" Value="{lex:Loc Translating}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>
            <iwk:SimpleStackPanel
                Grid.Row="6"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                HorizontalAlignment="Center"
                Orientation="Horizontal"
                Spacing="16">
                <Button
                    MinWidth="100"
                    HorizontalAlignment="Right"
                    Command="{Binding PreviousCommand}"
                    Content="{lex:Loc PreviousBtnContent}" />
                <Button
                    MinWidth="100"
                    HorizontalAlignment="Right"
                    Command="{Binding TranslateCommand}"
                    Content="{lex:Loc TranslateBtnContent}" />

                <Button
                    MinWidth="100"
                    HorizontalAlignment="Left"
                    Command="{Binding SaveCommand}"
                    Content="{lex:Loc SaveBtnContent}" />
                <Button
                    MinWidth="100"
                    HorizontalAlignment="Left"
                    Command="{Binding NextCommand}"
                    Content="{lex:Loc NextBtnContent}" />
            </iwk:SimpleStackPanel>
        </Grid>
    </DataTemplate>
</ResourceDictionary>