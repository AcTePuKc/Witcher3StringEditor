<Window
    x:Class="Witcher3StringEditor.Dialogs.Views.LogDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="clr-namespace:Witcher3StringEditor.Dialogs.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:l="clr-namespace:Witcher3StringEditor.Locales;assembly=Witcher3StringEditor.Locales"
    xmlns:i18n="clr-namespace:Microsoft.CodeAnalysis;assembly=Antelcat.I18N.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sf="http://schemas.syncfusion.com/wpf"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:vm="clr-namespace:Witcher3StringEditor.Dialogs.ViewModels"
    Title="{i18n:I18N {x:Static l:LangKeys.LogDialogTitle}}"
    Closed="LogDialog_OnClosed"
    Width="1200"
    Height="800"
    d:DataContext="{d:DesignInstance Type=vm:LogDialogViewModel}"
    ui:TitleBar.ExtendViewIntoTitleBar="True"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    WindowChrome.IsHitTestVisibleInChrome="True"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <!-- 
        Main grid layout for the log dialog
        Contains three rows: title bar, data grid, and pager controls
    -->
    <Grid>
        <Grid.RowDefinitions>
            <!-- Title bar row -->
            <RowDefinition Height="48" />
            <!-- Data grid row -->
            <RowDefinition Height="*" />
            <!-- Pager controls row -->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!-- Title bar area containing the dialog title and search box -->
        <Grid Height="48">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!-- Dialog title text -->
            <TextBlock
                Grid.Column="0"
                Margin="20,0,0,0"
                VerticalAlignment="Center"
                Text="{i18n:I18N {x:Static l:LangKeys.LogDialogTitle}}" />
            <!-- Search box for filtering log entries -->
            <ui:AutoSuggestBox
                Grid.Column="1"
                VerticalAlignment="Center"
                PlaceholderText="{i18n:I18N {x:Static l:LangKeys.SearchBoxPlaceholderText}}"
                QuerySubmitted="SearchBox_QuerySubmitted"
                TextChanged="SearchBox_TextChanged">
                <ui:AutoSuggestBox.QueryIcon>
                    <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Search}" />
                </ui:AutoSuggestBox.QueryIcon>
            </ui:AutoSuggestBox>
        </Grid>
        <!-- Data grid displaying log events -->
        <sf:SfDataGrid
            x:Name="SfDataGrid"
            Grid.Row="1"
            Margin="16,16,16,0"
            AllowDeleting="True"
            AllowResizingColumns="True"
            AutoGenerateColumns="False"
            HeaderRowHeight="25"
            ItemsSource="{Binding PagedSource, ElementName=SfDataPager, Mode=TwoWay}"
            NavigationMode="Row"
            RowHeight="30"
            SelectionMode="Extended"
            ShowRowHeader="True"
            GridPasteOption="None">
            <!-- Data grid resources for customizing row header appearance -->
            <sf:SfDataGrid.Resources>
                <ResourceDictionary>
                    <!-- Style for row header cells to display row numbers -->
                    <Style TargetType="sf:GridRowHeaderCell">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="sf:GridRowHeaderCell">
                                    <Border
                                        x:Name="PART_RowHeaderCellBorder"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                        <Grid>
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Text="{Binding RowIndex, RelativeSource={RelativeSource TemplatedParent}}"
                                                TextAlignment="Center" />
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ResourceDictionary>
            </sf:SfDataGrid.Resources>
            <!-- Interaction behaviors for handling grid sizing and row height -->
            <i:Interaction.Behaviors>
                <!-- Behavior to handle grid size changes -->
                <b:SfDataGridSizeChangedBehavior />
                <!-- Behavior to handle row height queries -->
                <b:SfDataGridQueryRowHeightBehavior MinHeight="{Binding ElementName=SfDataGrid, Path=RowHeight}" />
            </i:Interaction.Behaviors>
            <!-- Data grid columns definition -->
            <sf:SfDataGrid.Columns>
                <!-- Timestamp column -->
                <!-- TODO(i18n): restore localization when supported -->
                <sf:GridDateTimeColumn
                    ColumnSizer="SizeToHeader"
                    HeaderText="Time"
                    MappingName="Timestamp"
                    MinimumWidth="200"
                    Pattern="FullDateTime"
                    TextAlignment="Center" />
                <!-- Log level column -->
                <!-- TODO(i18n): restore localization when supported -->
                <sf:GridTextColumn
                    ColumnSizer="SizeToHeader"
                    HeaderText="Level"
                    MappingName="Level"
                    MinimumWidth="150"
                    TextAlignment="Center" />
                <!-- Log message column -->
                <!-- TODO(i18n): restore localization when supported -->
                <sf:GridTextColumn
                    ColumnSizer="AutoWithLastColumnFill"
                    HeaderText="Message"
                    MappingName="Message"
                    MinimumWidth="700"
                    TextWrapping="WrapWithOverflow" />
            </sf:SfDataGrid.Columns>
        </sf:SfDataGrid>
        <!-- Data pager for pagination of log events -->
        <sf:SfDataPager
            x:Name="SfDataPager"
            Grid.Row="2"
            Margin="0,4"
            HorizontalAlignment="Center"
            NumericButtonCount="10"
            PageSize="30"
            Source="{Binding LogEvents}" />
    </Grid>
</Window>
