<Window
    Closed="Window_Closed"
    Height="500"
    ResizeMode="NoResize"
    Title="{lex:Loc SaveDialogTitle}"
    Width="800"
    d:DataContext="{d:DesignInstance Type=vm:SaveDialogViewModel}"
    lex:LocalizeDictionary.DesignCulture="en"
    lex:ResxLocalizationProvider.DefaultAssembly="Witcher3StringEditor.Dialogs"
    lex:ResxLocalizationProvider.DefaultDictionary="Strings"
    mc:Ignorable="d"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    x:Class="Witcher3StringEditor.Dialogs.Views.SaveDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:c="clr-namespace:Witcher3StringEditor.Common;assembly=Witcher3StringEditor.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iwk="http://schemas.inkore.net/lib/ui/wpf"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:vm="clr-namespace:Witcher3StringEditor.Dialogs.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Window.Resources>
        <ResourceDictionary>
            <Style BasedOn="{StaticResource {x:Static ui:ThemeKeys.ExpanderCardStyleKey}}" TargetType="Expander">
                <Setter Property="HorizontalAlignment" Value="Stretch" />
            </Style>
            <ObjectDataProvider
                MethodName="GetValues"
                ObjectType="{x:Type sys:Enum}"
                x:Key="FileType">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="c:W3FileType" />
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
            <ObjectDataProvider
                MethodName="GetValues"
                ObjectType="{x:Type sys:Enum}"
                x:Key="W3Language">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="c:W3Language" />
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Expander IsExpanded="True" VerticalAlignment="Top">
            <Expander.Header>
                <Grid Height="30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{lex:Loc TargetFiletype}" VerticalAlignment="Center" />
                    <ComboBox
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        ItemsSource="{Binding Source={StaticResource FileType}}"
                        SelectedValue="{Binding W3Job.W3FileType}" />
                </Grid>
            </Expander.Header>
            <Expander.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="{lex:Loc TargetLanguage}" VerticalAlignment="Center" />
                    <ComboBox
                        Grid.Row="0"
                        HorizontalAlignment="Right"
                        ItemsSource="{Binding Source={StaticResource W3Language}}"
                        SelectedValue="{Binding W3Job.Language}"
                        Width="150" />
                    <Grid Grid.Row="1">
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding W3Job.W3FileType}" Value="{x:Static c:W3FileType.csv}">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                        <TextBlock
                            Margin="0,16,0,0"
                            Text="{lex:Loc IgnoreIDSpaceCheck}"
                            VerticalAlignment="Center" />
                        <ui:ToggleSwitch
                            HorizontalAlignment="Right"
                            IsOn="{Binding W3Job.IsIgnoreIdSpaceCheck}"
                            Margin="0,16,0,0"
                            OffContent="{lex:Loc IsOff}"
                            OnContent="{lex:Loc IsOn}" />
                    </Grid>
                    <ui:NumberBox
                        Grid.Row="2"
                        Margin="0,16,0,0"
                        Maximum="9999"
                        Minimum="-1"
                        SmallChange="1"
                        SpinButtonPlacementMode="Inline"
                        Value="{Binding W3Job.IdSpace}"
                        ui:ControlHelper.Header="{lex:Loc IDSpace}">
                        <ui:NumberBox.Style>
                            <Style TargetType="ui:NumberBox">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding W3Job.W3FileType}" Value="{x:Static c:W3FileType.csv}">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding W3Job.IsIgnoreIdSpaceCheck}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ui:NumberBox.Style>
                        <ui:NumberBox.ToolTip>
                            <ToolTip Content="{lex:Loc IdSpaceToolTip}" />
                        </ui:NumberBox.ToolTip>
                    </ui:NumberBox>
                </Grid>
            </Expander.Content>
        </Expander>
        <iwk:SimpleStackPanel
            Grid.ColumnSpan="2"
            Grid.Row="1"
            HorizontalAlignment="Center"
            Margin="0,24"
            Orientation="Horizontal"
            Spacing="16">
            <Button
                Command="{Binding SaveCommand}"
                Content="{lex:Loc SaveBtnContent}"
                MinWidth="100" />
            <Button
                Command="{Binding CancelCommand}"
                Content="{lex:Loc CancelBtnContent}"
                MinWidth="100" />
        </iwk:SimpleStackPanel>
    </Grid>
</Window>