<Window
    Closed="Window_Closed"
    Height="500"
    ResizeMode="NoResize"
    Title="{lex:Loc SaveDialogTitle}"
    Width="800"
    d:DataContext="{d:DesignInstance Type=vm:SaveDialogViewModel}"
    lex:LocalizeDictionary.DesignCulture="en"
    lex:ResxLocalizationProvider.DefaultAssembly="Witcher3StringEditor.Dialogs"
    lex:ResxLocalizationProvider.DefaultDictionary="Strings"
    mc:Ignorable="d"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    x:Class="Witcher3StringEditor.Dialogs.Views.SaveDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:c="clr-namespace:Witcher3StringEditor.Common;assembly=Witcher3StringEditor.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iwk="http://schemas.inkore.net/lib/ui/wpf"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:vm="clr-namespace:Witcher3StringEditor.Dialogs.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Window.Resources>
        <ResourceDictionary>
            <Style BasedOn="{StaticResource {x:Static ui:ThemeKeys.ExpanderCardStyleKey}}" TargetType="Expander">
                <Setter Property="HorizontalAlignment" Value="Stretch" />
            </Style>
            <x:Array Type="c:FileType" x:Key="FileTypeArray">
                <c:FileType>csv</c:FileType>
                <c:FileType>w3Strings</c:FileType>
            </x:Array>
            <x:Array Type="c:W3Language" x:Key="W3LanguageArray">
                <c:W3Language>ar</c:W3Language>
                <c:W3Language>br</c:W3Language>
                <c:W3Language>cn</c:W3Language>
                <c:W3Language>cz</c:W3Language>
                <c:W3Language>de</c:W3Language>
                <c:W3Language>en</c:W3Language>
                <c:W3Language>es</c:W3Language>
                <c:W3Language>esmx</c:W3Language>
                <c:W3Language>fr</c:W3Language>
                <c:W3Language>hu</c:W3Language>
                <c:W3Language>it</c:W3Language>
                <c:W3Language>jp</c:W3Language>
                <c:W3Language>kr</c:W3Language>
                <c:W3Language>pl</c:W3Language>
                <c:W3Language>ru</c:W3Language>
                <c:W3Language>tr</c:W3Language>
                <c:W3Language>zh</c:W3Language>
            </x:Array>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Expander IsExpanded="True" VerticalAlignment="Top">
            <Expander.Header>
                <Grid Height="30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{lex:Loc TargetFiletype}" VerticalAlignment="Center" />
                    <ComboBox
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        ItemsSource="{StaticResource FileTypeArray}"
                        SelectedValue="{Binding W3Job.FileType}"
                        x:Name="Comobox" />
                </Grid>
            </Expander.Header>
            <Expander.Content>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="{lex:Loc TargetLanguage}" VerticalAlignment="Center" />
                    <ComboBox
                        Grid.Column="1"
                        Grid.Row="0"
                        HorizontalAlignment="Stretch"
                        ItemsSource="{StaticResource W3LanguageArray}"
                        SelectedValue="{Binding W3Job.Language}" />
                    <Grid
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="150" />
                        </Grid.ColumnDefinitions>
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Setter Property="IsEnabled" Value="False" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=Comobox, Path=SelectedItem}" Value="{x:Static c:FileType.w3Strings}">
                                        <Setter Property="Visibility" Value="Visible" />
                                        <Setter Property="IsEnabled" Value="True" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                        <TextBlock Text="{lex:Loc IgnoreIDSpaceCheck}" VerticalAlignment="Center" />
                        <ui:ToggleSwitch
                            Grid.Column="1"
                            Grid.Row="0"
                            IsOn="{Binding W3Job.IsIgnoreIdSpaceCheck}"
                            Margin="0,16"
                            OffContent="{lex:Loc IsOff}"
                            OnContent="{lex:Loc IsOn}"
                            x:Name="IgnoreIdSpaceCheckSwitch" />
                        <ui:NumberBox
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Grid.Row="1"
                            Maximum="9999"
                            Minimum="-1"
                            SmallChange="1"
                            SpinButtonPlacementMode="Inline"
                            Value="{Binding W3Job.IdSpace}"
                            ui:ControlHelper.Header="{lex:Loc IDSpace}">
                            <ui:NumberBox.Style>
                                <Style TargetType="ui:NumberBox">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=IgnoreIdSpaceCheckSwitch, Path=IsOn}" Value="True">
                                            <Setter Property="IsEnabled" Value="False" />
                                            <Setter Property="Visibility" Value="Hidden" />
                                            <Setter Property="Height" Value="0" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ui:NumberBox.Style>
                            <ui:NumberBox.ToolTip>
                                <ToolTip Content="{lex:Loc IdSpaceToolTip}" />
                            </ui:NumberBox.ToolTip>
                        </ui:NumberBox>
                    </Grid>
                </Grid>
            </Expander.Content>
        </Expander>
        <iwk:SimpleStackPanel
            Grid.ColumnSpan="2"
            Grid.Row="1"
            HorizontalAlignment="Center"
            Margin="0,24"
            Orientation="Horizontal"
            Spacing="16">
            <Button
                Command="{Binding SaveCommand}"
                Content="{lex:Loc SaveBtnContent}"
                MinWidth="100" />
            <Button
                Command="{Binding CancelCommand}"
                Content="{lex:Loc CancelBtnContent}"
                MinWidth="100" />
        </iwk:SimpleStackPanel>
    </Grid>
</Window>