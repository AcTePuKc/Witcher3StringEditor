<Window
    x:Class="Witcher3StringEditor.Dialogs.Views.SettingsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:Witcher3StringEditor.Common;assembly=Witcher3StringEditor.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:vm="clr-namespace:Witcher3StringEditor.Dialogs.ViewModels"
    Title="{lex:Loc SettingsDialogTitle}"
    Width="600"
    Height="200"
    d:DataContext="{d:DesignInstance Type=vm:SettingDialogViewModel}"
    lex:LocalizeDictionary.DesignCulture="en"
    lex:ResxLocalizationProvider.DefaultAssembly="Witcher3StringEditor.Dialogs"
    lex:ResxLocalizationProvider.DefaultDictionary="Strings"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    Closed="Window_Closed"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closing">
            <i:InvokeCommandAction Command="{Binding WindowClosingCommand}" PassEventArgsToCommand="True" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Window.Resources>
        <ResourceDictionary>
            <x:Array x:Key="FileTypeArray" Type="c:FileType">
                <c:FileType>csv</c:FileType>
                <c:FileType>w3Strings</c:FileType>
            </x:Array>
            <x:Array x:Key="W3LanguageArray" Type="c:W3Language">
                <c:W3Language>ar</c:W3Language>
                <c:W3Language>br</c:W3Language>
                <c:W3Language>cn</c:W3Language>
                <c:W3Language>cz</c:W3Language>
                <c:W3Language>de</c:W3Language>
                <c:W3Language>en</c:W3Language>
                <c:W3Language>es</c:W3Language>
                <c:W3Language>esmx</c:W3Language>
                <c:W3Language>fr</c:W3Language>
                <c:W3Language>hu</c:W3Language>
                <c:W3Language>it</c:W3Language>
                <c:W3Language>jp</c:W3Language>
                <c:W3Language>kr</c:W3Language>
                <c:W3Language>pl</c:W3Language>
                <c:W3Language>ru</c:W3Language>
                <c:W3Language>tr</c:W3Language>
                <c:W3Language>zh</c:W3Language>
            </x:Array>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <ui:FontIcon Glyph="&#xE90F;" />
        <TextBox
            Grid.Column="2"
            ui:ControlHelper.PlaceholderText="{lex:Loc W3StringsPath}"
            IsReadOnly="True"
            Text="{Binding AppSettings.W3StringsPath, Mode=OneWay}" />
        <Button
            Grid.Row="0"
            Grid.Column="4"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Command="{Binding SetW3StringsPathCommand}">
            <ui:FontIcon Glyph="&#xe71e;" />
        </Button>
        <ui:FontIcon Grid.Row="2" Glyph="&#xE7FC;" />
        <TextBox
            Grid.Row="2"
            Grid.Column="2"
            ui:ControlHelper.PlaceholderText="{lex:Loc GameExePath}"
            IsReadOnly="True"
            Text="{Binding AppSettings.GameExePath, Mode=OneWay}" />
        <Button
            Grid.Row="2"
            Grid.Column="4"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Command="{Binding SetGameExePathCommand}">
            <ui:FontIcon Glyph="&#xe71e;" />
        </Button>
        <StackPanel
            Grid.Row="4"
            Grid.ColumnSpan="5"
            Orientation="Horizontal">
            <ui:FontIcon Margin="0,0,10,0" Glyph="&#xE97C;" />
            <TextBlock VerticalAlignment="Center" Text="{lex:Loc PreferredFiletype}" />
            <ComboBox
                Grid.Column="2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                ItemsSource="{StaticResource FileTypeArray}"
                SelectedItem="{Binding AppSettings.PreferredFileType, Mode=TwoWay}" />
            <ui:FontIcon Margin="10,0" Glyph="&#xF2B7;" />
            <TextBlock VerticalAlignment="Center" Text="{lex:Loc PreferredLanguage}" />
            <ComboBox
                Margin="10,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                ItemsSource="{StaticResource W3LanguageArray}"
                SelectedItem="{Binding AppSettings.PreferredLanguage}" />
        </StackPanel>
    </Grid>
</Window>