<Window
    x:Class="Witcher3StringEditor.Dialogs.Views.SettingsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:Witcher3StringEditor.Dialogs.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iwk="http://schemas.inkore.net/lib/ui/wpf"
    xmlns:l="clr-namespace:Witcher3StringEditor.Locales;assembly=Witcher3StringEditor.Locales"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:vm="clr-namespace:Witcher3StringEditor.Dialogs.ViewModels"
    xmlns:common="clr-namespace:Witcher3StringEditor.Common;assembly=Witcher3StringEditor.Common"
    Title="{I18N {x:Static l:LangKeys.SettingsDialogTitle}}"
    Width="800"
    Height="800"
    d:DataContext="{d:DesignInstance Type=vm:SettingsDialogViewModel}"
    ui:TitleBar.ExtendViewIntoTitleBar="True"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    WindowChrome.IsHitTestVisibleInChrome="True"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <!-- 
        Window resources containing data providers, styles and converters
    -->
    <Window.Resources>
        <ResourceDictionary>
            <!-- Data provider for The Witcher 3 file types enumeration -->
            <ObjectDataProvider
                x:Key="FileType"
                MethodName="GetValues"
                ObjectType="{x:Type sys:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="common:W3FileType" />
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
            <!-- Data provider for The Witcher 3 languages enumeration -->
            <ObjectDataProvider
                x:Key="W3Language"
                MethodName="GetValues"
                ObjectType="{x:Type sys:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="common:W3Language" />
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
            <!-- Static array data provider for page size options -->
            <!-- Provides predefined page size values (20, 30, 50, 100) for data grid pagination -->
            <x:Array x:Key="PageSizes" Type="sys:Int32">
                <sys:Int32>20</sys:Int32>
                <sys:Int32>30</sys:Int32>
                <sys:Int32>50</sys:Int32>
                <sys:Int32>100</sys:Int32>
            </x:Array>
            <!-- Style for settings section header text blocks -->
            <!-- ReSharper disable once Xaml.StaticResourceNotResolved -->
            <Style
                x:Key="SettingsSectionHeaderTextBlockStyle"
                BasedOn="{StaticResource BodyStrongTextBlockStyle}"
                TargetType="TextBlock">
                <Style.Setters>
                    <Setter Property="Margin" Value="1,30,0,6" />
                </Style.Setters>
            </Style>
            <!-- Converter for converting strings to CultureInfo objects -->
            <c:StringToCultureInfoConverter x:Key="StringToCultureInfoConverter" />
            <!-- Converter for displaying The Witcher 3 language native names -->
            <c:W3LanguageToNativeNameConverter x:Key="W3LanguageToNativeNameConverter" />
            <!-- Converter for displaying The Witcher 3 file type localized strings -->
            <c:W3FileTypeToLocalizedStringConverter x:Key="W3FileTypeToLocalizedStringConverter" />
            <!-- Converter for checking if a file exists -->
            <c:FileExistsToCollapsedConverter x:Key="FileExistsToCollapsedConverter" />
        </ResourceDictionary>
    </Window.Resources>
    <!-- 
        Main grid layout for the settings dialog
        Contains two rows: title bar and content area
    -->
    <Grid>
        <Grid.RowDefinitions>
            <!-- Title bar row -->
            <RowDefinition Height="48" />
            <!-- Content area row -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!-- Title text displayed in the title bar area -->
        <TextBlock
            Margin="20,0,0,0"
            VerticalAlignment="Center"
            Text="{I18N {x:Static l:LangKeys.SettingsDialogTitle}}" />
        <!-- Scrollable content area containing all settings cards -->
        <ScrollViewer Grid.Row="1">
            <iwk:SimpleStackPanel Margin="36,0" Spacing="4">
                <!-- General settings section header -->
                <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}"
                           Text="{I18N {x:Static l:LangKeys.GeneralSettingsHeader}}" />
                <!-- W3Strings encoder path settings card -->
                <ui:SettingsCard>
                    <ui:SettingsCard.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{I18N {x:Static l:LangKeys.EncoderSettingCardHeader}}" />
                            <TextBlock Text="{I18N {x:Static l:LangKeys.PathInvalidIndicatorText}}" Margin="5,0,0,0"
                                       Visibility="{Binding AppSettings.W3StringsPath,Converter={StaticResource FileExistsToCollapsedConverter}}" />
                        </StackPanel>
                    </ui:SettingsCard.Header>
                    <ui:SettingsCard.HeaderIcon>
                        <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Repair}" />
                    </ui:SettingsCard.HeaderIcon>
                    <ui:SettingsCard.Description>
                        <Grid>
                            <TextBlock Text="{Binding AppSettings.W3StringsPath}" />
                            <TextBlock Text="{I18N {x:Static l:LangKeys.W3StringsPath}}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Hidden" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding AppSettings.W3StringsPath}" Value="">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </ui:SettingsCard.Description>
                    <Button Command="{Binding SetW3StringsPathCommand}">
                        <ui:FontIcon Glyph="&#xe71e;" />
                    </Button>
                </ui:SettingsCard>
                <!-- Game executable path settings card -->
                <ui:SettingsCard>
                    <ui:SettingsCard.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{I18N {x:Static l:LangKeys.GameSettingCardHeader}}" />
                            <TextBlock Text="{I18N {x:Static l:LangKeys.PathInvalidIndicatorText}}" Margin="5,0,0,0"
                                       Visibility="{Binding AppSettings.GameExePath,Converter={StaticResource FileExistsToCollapsedConverter}}" />
                        </StackPanel>
                    </ui:SettingsCard.Header>
                    <ui:SettingsCard.HeaderIcon>
                        <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Game}" />
                    </ui:SettingsCard.HeaderIcon>
                    <ui:SettingsCard.Description>
                        <Grid>
                            <TextBlock Text="{Binding AppSettings.GameExePath}" />
                            <TextBlock Text="{I18N {x:Static l:LangKeys.GameExePath}}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Hidden" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding AppSettings.GameExePath}" Value="">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </ui:SettingsCard.Description>
                    <Button Command="{Binding SetGameExePathCommand}">
                        <ui:FontIcon Glyph="&#xe71e;" />
                    </Button>
                </ui:SettingsCard>
                <!-- Preferred file type settings card -->
                <ui:SettingsCard Description="{I18N {x:Static l:LangKeys.PreferredFileTypeDescription}}"
                                 Header="{I18N {x:Static l:LangKeys.PreferredFileType}}">
                    <ui:SettingsCard.HeaderIcon>
                        <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Type}" />
                    </ui:SettingsCard.HeaderIcon>
                    <ComboBox ItemsSource="{Binding Source={StaticResource FileType}}"
                              SelectedItem="{Binding AppSettings.PreferredW3FileType, Mode=TwoWay}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Text>
                                        <MultiBinding Converter="{StaticResource W3FileTypeToLocalizedStringConverter}">
                                            <Binding />
                                            <Binding Path="DataContext.AppSettings.Language"
                                                     RelativeSource="{RelativeSource AncestorType=ComboBox}" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </ui:SettingsCard>
                <!-- Preferred language settings card -->
                <ui:SettingsCard Description="{I18N {x:Static l:LangKeys.PreferredLanguageDescription}}"
                                 Header="{I18N {x:Static l:LangKeys.PreferredLanguage}}">
                    <ui:SettingsCard.HeaderIcon>
                        <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.LocaleLanguage}" />
                    </ui:SettingsCard.HeaderIcon>
                    <ComboBox ItemsSource="{Binding Source={StaticResource W3Language}}"
                              SelectedItem="{Binding AppSettings.PreferredLanguage, Mode=TwoWay}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource W3LanguageToNativeNameConverter}}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </ui:SettingsCard>
                <!-- Translator selection settings card -->
                <ui:SettingsCard Description="{I18N {x:Static l:LangKeys.TranslatorSelectionDescription}}"
                                 Header="{I18N {x:Static l:LangKeys.TranslatorSelection}}">
                    <ui:SettingsCard.HeaderIcon>
                        <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.PenPalette}" />
                    </ui:SettingsCard.HeaderIcon>
                    <ComboBox
                        ItemsSource="{Binding Translators}"
                        SelectedItem="{Binding AppSettings.Translator, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </ui:SettingsCard>
                <ui:SettingsCard Description="{I18N {x:Static l:LangKeys.TranslationProviderSettingsDescription}}"
                                 Header="{I18N {x:Static l:LangKeys.TranslationProviderSettingsHeader}}">
                    <ui:SettingsCard.HeaderIcon>
                        <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.CloudDownload}" />
                    </ui:SettingsCard.HeaderIcon>
                    <StackPanel>
                        <TextBlock Margin="0,0,0,4" Text="{I18N {x:Static l:LangKeys.Provider}}" />
                        <ComboBox
                            ItemsSource="{Binding ProviderOptions}"
                            SelectedItem="{Binding AppSettings.TranslationProviderName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock Margin="0,4,0,0"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Text="{I18N {x:Static l:LangKeys.TranslationProviderRoutingHint}}" />
                        <TextBlock Margin="0,8,0,4" Text="{I18N {x:Static l:LangKeys.Model}}" />
                        <DockPanel LastChildFill="True">
                            <Button Command="{Binding RefreshModelsCommand}" DockPanel.Dock="Right" Margin="6,0,0,0">
                                <TextBlock Text="{I18N {x:Static l:LangKeys.Refresh}}" />
                            </Button>
                            <ComboBox
                                ItemsSource="{Binding ModelOptions}"
                                SelectedItem="{Binding AppSettings.TranslationModelName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </DockPanel>
                        <TextBlock Margin="0,8,0,4" Text="{I18N {x:Static l:LangKeys.TranslationProviderBaseUrlLabel}}" />
                        <TextBox
                            Text="{Binding AppSettings.BaseUrl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBlock Margin="0,6,0,0"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   Text="{Binding ModelStatusText}" />
                    </StackPanel>
                </ui:SettingsCard>
                <ui:SettingsCard Description="{I18N {x:Static l:LangKeys.TerminologySettingsDescription}}"
                                 Header="{I18N {x:Static l:LangKeys.TerminologySettingsHeader}}">
                    <ui:SettingsCard.HeaderIcon>
                        <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Document}" />
                    </ui:SettingsCard.HeaderIcon>
                    <ui:SettingsCard.Description>
                        <StackPanel>
                            <Grid>
                                <TextBlock Text="{Binding AppSettings.TerminologyFilePath}" />
                                <TextBlock Text="{I18N {x:Static l:LangKeys.TerminologyFilePath}}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Hidden" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding AppSettings.TerminologyFilePath}" Value="">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                            <TextBlock Margin="0,4,0,0"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       Text="{Binding TerminologyStatusText}" />
                        </StackPanel>
                    </ui:SettingsCard.Description>
                    <StackPanel>
                        <CheckBox Content="Enable terminology pack"
                                  IsChecked="{Binding AppSettings.UseTerminologyPack, Mode=TwoWay}" />
                        <Button Command="{Binding SetTerminologyFilePathCommand}" Margin="0,6,0,0">
                            <ui:FontIcon Glyph="&#xe71e;" />
                        </Button>
                    </StackPanel>
                </ui:SettingsCard>
                <ui:SettingsCard Description="{I18N {x:Static l:LangKeys.StyleGuideSettingsDescription}}"
                                 Header="{I18N {x:Static l:LangKeys.StyleGuideSettingsHeader}}">
                    <ui:SettingsCard.HeaderIcon>
                        <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Document}" />
                    </ui:SettingsCard.HeaderIcon>
                    <ui:SettingsCard.Description>
                        <StackPanel>
                            <Grid>
                                <TextBlock Text="{Binding AppSettings.StyleGuideFilePath}" />
                                <TextBlock Text="{I18N {x:Static l:LangKeys.StyleGuideFilePath}}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Hidden" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding AppSettings.StyleGuideFilePath}" Value="">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                            <TextBlock Margin="0,4,0,0"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       Text="{Binding StyleGuideStatusText}" />
                        </StackPanel>
                    </ui:SettingsCard.Description>
                    <StackPanel>
                        <CheckBox Content="Enable style guide"
                                  IsChecked="{Binding AppSettings.UseStyleGuide, Mode=TwoWay}" />
                        <Button Command="{Binding SetStyleGuideFilePathCommand}" Margin="0,6,0,0">
                            <ui:FontIcon Glyph="&#xe71e;" />
                        </Button>
                    </StackPanel>
                </ui:SettingsCard>
                <!-- User interface settings section header -->
                <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}"
                           Text="{I18N {x:Static l:LangKeys.UserInterfaceSettingsHeader}}" />
                <!-- Application language settings card -->
                <ui:SettingsCard Description="{I18N  {x:Static l:LangKeys.LanguageDescription}}"
                                 Header="{I18N {x:Static l:LangKeys.LanguageHelpText}}">
                    <ui:SettingsCard.HeaderIcon>
                        <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Globe}" />
                    </ui:SettingsCard.HeaderIcon>
                    <ComboBox
                        DisplayMemberPath="NativeName"
                        ItemsSource="{Binding SupportedCultures}"
                        SelectedItem="{Binding AppSettings.Language, Converter={StaticResource StringToCultureInfoConverter}}" />
                </ui:SettingsCard>
                <!-- Page size settings card -->
                <!-- Allows users to select the number of items displayed per page in data grids -->
                <ui:SettingsCard Description="{I18N {x:Static l:LangKeys.PageSizeDescription}}"
                                 Header="{I18N {x:Static l:LangKeys.PageSize}}">
                    <ui:SettingsCard.HeaderIcon>
                        <ui:FontIcon Icon="{x:Static ui:SegoeFluentIcons.Document}" />
                    </ui:SettingsCard.HeaderIcon>
                    <!-- Binds to AppSettings.PageSize property with two-way binding -->
                    <ComboBox
                        ItemsSource="{Binding Source={StaticResource PageSizes}}"
                        SelectedItem="{Binding AppSettings.PageSize,Mode=TwoWay}" />
                </ui:SettingsCard>
            </iwk:SimpleStackPanel>
        </ScrollViewer>
    </Grid>
</Window>
