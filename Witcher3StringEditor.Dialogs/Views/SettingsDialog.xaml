<Window
    x:Class="Witcher3StringEditor.Dialogs.Views.SettingsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:Witcher3StringEditor.Dialogs.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:iwk="http://schemas.inkore.net/lib/ui/wpf"
    xmlns:l="clr-namespace:Witcher3StringEditor.Locales;assembly=Witcher3StringEditor.Locales"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:s="clr-namespace:Witcher3StringEditor.Shared;assembly=Witcher3StringEditor.Shared"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:vm="clr-namespace:Witcher3StringEditor.Dialogs.ViewModels"
    Title="{I18N {x:Static l:LangKeys.SettingsDialogTitle}}"
    Width="800"
    Height="800"
    d:DataContext="{d:DesignInstance Type=vm:SettingDialogViewModel}"
    ui:TitleBar.ExtendViewIntoTitleBar="True"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    WindowChrome.IsHitTestVisibleInChrome="True"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <ObjectDataProvider
                x:Key="FileType"
                MethodName="GetValues"
                ObjectType="{x:Type sys:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="s:W3FileType" />
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
            <ObjectDataProvider
                x:Key="W3Language"
                MethodName="GetValues"
                ObjectType="{x:Type sys:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="s:W3Language" />
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
            <!-- ReSharper disable once Xaml.StaticResourceNotResolved -->
            <Style
                x:Key="SettingsSectionHeaderTextBlockStyle"
                BasedOn="{StaticResource BodyStrongTextBlockStyle}"
                TargetType="TextBlock">
                <Style.Setters>
                    <Setter Property="Margin" Value="1,30,0,6" />
                </Style.Setters>
            </Style>
            <c:TranslatorToStringConverter x:Key="TranslatorToStringConverter" />
            <c:StringToCultureInfoConverter x:Key="StringToCultureInfoConverter" />
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Margin="20,0,0,0"
            VerticalAlignment="Center"
            Text="{I18N {x:Static l:LangKeys.SettingsDialogTitle}}" />
        <ScrollViewer Grid.Row="1">
            <iwk:SimpleStackPanel Margin="36,0" Spacing="4">
                <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}"
                           Text="{I18N {x:Static l:LangKeys.GeneralSettingsHeader}}" />
                <ui:SettingsCard
                    Description="{Binding AppSettings.W3StringsPath, FallbackValue={I18N {x:Static l:LangKeys.W3StringsPath}}}"
                    Header="{I18N {x:Static l:LangKeys.EncoderSettingCardHeader}}">
                    <ui:SettingsCard.HeaderIcon>
                        <ui:FontIcon Glyph="&#xE90F;" />
                    </ui:SettingsCard.HeaderIcon>
                    <Button Command="{Binding SetW3StringsPathCommand}">
                        <ui:FontIcon Glyph="&#xe71e;" />
                    </Button>
                </ui:SettingsCard>
                <ui:SettingsCard
                    Description="{Binding AppSettings.GameExePath, FallbackValue={I18N {x:Static l:LangKeys.GameExePath}}}"
                    Header="{I18N {x:Static l:LangKeys.GameSettingCardHeader}}">
                    <ui:SettingsCard.HeaderIcon>
                        <ui:FontIcon Glyph="&#xE7FC;" />
                    </ui:SettingsCard.HeaderIcon>
                    <Button Command="{Binding SetGameExePathCommand}">
                        <ui:FontIcon Glyph="&#xe71e;" />
                    </Button>
                </ui:SettingsCard>
                <ui:SettingsCard Header="{I18N {x:Static l:LangKeys.PreferredFileType}}">
                    <ui:SettingsCard.HeaderIcon>
                        <ui:FontIcon Glyph="&#xE97C;" />
                    </ui:SettingsCard.HeaderIcon>
                    <ComboBox ItemsSource="{Binding Source={StaticResource FileType}}"
                              SelectedItem="{Binding AppSettings.PreferredW3FileType, Mode=TwoWay}" />
                </ui:SettingsCard>
                <ui:SettingsCard Header="{I18N {x:Static l:LangKeys.PreferredLanguage}}">
                    <ui:SettingsCard.HeaderIcon>
                        <ui:FontIcon Glyph="&#xF2B7;" />
                    </ui:SettingsCard.HeaderIcon>
                    <ComboBox ItemsSource="{Binding Source={StaticResource W3Language}}"
                              SelectedItem="{Binding AppSettings.PreferredLanguage, Mode=TwoWay}" />
                </ui:SettingsCard>
                <ui:SettingsCard Header="{I18N {x:Static l:LangKeys.TranslatorSelection}}">
                    <ui:SettingsCard.HeaderIcon>
                        <ui:FontIcon Glyph="&#xEE56;" />
                    </ui:SettingsCard.HeaderIcon>
                    <ComboBox
                        DisplayMemberPath="Name"
                        ItemsSource="{Binding Translators}"
                        SelectedItem="{Binding AppSettings.Translator, Converter={StaticResource TranslatorToStringConverter}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </ui:SettingsCard>
                <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}"
                           Text="{I18N {x:Static l:LangKeys.UserInterfaceSettingsHeader}}" />
                <ui:SettingsCard Header="{I18N {x:Static l:LangKeys.LanguageHelpText}}">
                    <ui:SettingsCard.HeaderIcon>
                        <ui:FontIcon Glyph="&#xE774;" />
                    </ui:SettingsCard.HeaderIcon>
                    <ComboBox
                        DisplayMemberPath="NativeName"
                        ItemsSource="{Binding SupportedCultures}"
                        SelectedItem="{Binding AppSettings.Language, Converter={StaticResource StringToCultureInfoConverter}}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction Command="{Binding ChangeLanguageCommand}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ComboBox>
                </ui:SettingsCard>
            </iwk:SimpleStackPanel>
        </ScrollViewer>
    </Grid>
</Window>