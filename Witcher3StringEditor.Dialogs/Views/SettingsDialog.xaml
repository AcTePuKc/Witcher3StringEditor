<Window
    x:Class="Witcher3StringEditor.Dialogs.Views.SettingsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:Witcher3StringEditor.Common;assembly=Witcher3StringEditor.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:iwk="http://schemas.inkore.net/lib/ui/wpf"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:vm="clr-namespace:Witcher3StringEditor.Dialogs.ViewModels"
    Title="{lex:Loc SettingsDialogTitle}"
    Width="800"
    Height="600"
    d:DataContext="{d:DesignInstance Type=vm:SettingDialogViewModel}"
    lex:LocalizeDictionary.DesignCulture="en"
    lex:ResxLocalizationProvider.DefaultAssembly="Witcher3StringEditor.Dialogs"
    lex:ResxLocalizationProvider.DefaultDictionary="Strings"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    Closed="Window_Closed"
    mc:Ignorable="d">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closing">
            <i:InvokeCommandAction Command="{Binding WindowClosingCommand}" PassEventArgsToCommand="True" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Window.Resources>
        <ResourceDictionary>
            <x:Array x:Key="FileTypeArray" Type="c:FileType">
                <c:FileType>csv</c:FileType>
                <c:FileType>w3Strings</c:FileType>
            </x:Array>
            <x:Array x:Key="W3LanguageArray" Type="c:W3Language">
                <c:W3Language>ar</c:W3Language>
                <c:W3Language>br</c:W3Language>
                <c:W3Language>cn</c:W3Language>
                <c:W3Language>cz</c:W3Language>
                <c:W3Language>de</c:W3Language>
                <c:W3Language>en</c:W3Language>
                <c:W3Language>es</c:W3Language>
                <c:W3Language>esmx</c:W3Language>
                <c:W3Language>fr</c:W3Language>
                <c:W3Language>hu</c:W3Language>
                <c:W3Language>it</c:W3Language>
                <c:W3Language>jp</c:W3Language>
                <c:W3Language>kr</c:W3Language>
                <c:W3Language>pl</c:W3Language>
                <c:W3Language>ru</c:W3Language>
                <c:W3Language>tr</c:W3Language>
                <c:W3Language>zh</c:W3Language>
            </x:Array>
            <Style
                x:Key="SettingsSectionHeaderTextBlockStyle"
                BasedOn="{StaticResource BodyStrongTextBlockStyle}"
                TargetType="TextBlock">
                <Style.Setters>
                    <Setter Property="Margin" Value="1,30,0,6" />
                </Style.Setters>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="10,10">
        <ScrollViewer>
            <iwk:SimpleStackPanel Spacing="4">
                <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" Text="{lex:Loc GeneralSettingsHeader}" />
                <ui:SettingsCard Description="{Binding AppSettings.W3StringsPath, FallbackValue={lex:Loc W3StringsPath}}" Header="{lex:Loc EncoderSettingCardHeader}">
                    <ui:SettingsCard.HeaderIcon>
                        <ui:FontIcon Glyph="&#xE90F;" />
                    </ui:SettingsCard.HeaderIcon>
                    <Button Command="{Binding SetW3StringsPathCommand}">
                        <ui:FontIcon Glyph="&#xe71e;" />
                    </Button>
                </ui:SettingsCard>
                <ui:SettingsCard Description="{Binding AppSettings.GameExePath, FallbackValue={lex:Loc GameExePath}}" Header="{lex:Loc GameSettingCardHeader}">
                    <ui:SettingsCard.HeaderIcon>
                        <ui:FontIcon Glyph="&#xE7FC;" />
                    </ui:SettingsCard.HeaderIcon>
                    <Button Command="{Binding SetGameExePathCommand}">
                        <ui:FontIcon Glyph="&#xe71e;" />
                    </Button>
                </ui:SettingsCard>
                <ui:SettingsCard Header="{lex:Loc PreferredFiletype}">
                    <ui:SettingsCard.HeaderIcon>
                        <ui:FontIcon Glyph="&#xE97C;" />
                    </ui:SettingsCard.HeaderIcon>
                    <ComboBox ItemsSource="{StaticResource FileTypeArray}" SelectedItem="{Binding AppSettings.PreferredFileType, Mode=TwoWay}" />
                </ui:SettingsCard>
                <ui:SettingsCard Header="{lex:Loc PreferredLanguage}">
                    <ui:SettingsCard.HeaderIcon>
                        <ui:FontIcon Glyph="&#xF2B7;" />
                    </ui:SettingsCard.HeaderIcon>
                    <ComboBox ItemsSource="{StaticResource W3LanguageArray}" SelectedItem="{Binding AppSettings.PreferredLanguage, Mode=TwoWay}" />
                </ui:SettingsCard>
            </iwk:SimpleStackPanel>
        </ScrollViewer>
    </Grid>
</Window>