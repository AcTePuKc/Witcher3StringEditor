<Window
    x:Class="Witcher3StringEditor.Dialogs.Views.SettingsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="clr-namespace:Witcher3StringEditor.Dialogs.Behaviors"
    xmlns:c="clr-namespace:Witcher3StringEditor.Common;assembly=Witcher3StringEditor.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:iwk="http://schemas.inkore.net/lib/ui/wpf"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:vm="clr-namespace:Witcher3StringEditor.Dialogs.ViewModels"
    Title="{lex:Loc SettingsDialogTitle}"
    Width="800"
    Height="800"
    d:DataContext="{d:DesignInstance Type=vm:SettingDialogViewModel}"
    lex:LocalizeDictionary.DesignCulture="en"
    lex:ResxLocalizationProvider.DefaultAssembly="Witcher3StringEditor.Dialogs"
    lex:ResxLocalizationProvider.DefaultDictionary="Strings"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    Closed="Window_Closed"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closing">
            <i:InvokeCommandAction Command="{Binding WindowClosingCommand}" PassEventArgsToCommand="True" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Window.Resources>
        <ResourceDictionary>
            <ObjectDataProvider
                x:Key="FileType"
                MethodName="GetValues"
                ObjectType="{x:Type sys:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="c:W3FileType" />
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
            <ObjectDataProvider
                x:Key="W3Language"
                MethodName="GetValues"
                ObjectType="{x:Type sys:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="c:W3Language" />
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
            <Style
                x:Key="SettingsSectionHeaderTextBlockStyle"
                BasedOn="{StaticResource BodyStrongTextBlockStyle}"
                TargetType="TextBlock">
                <Style.Setters>
                    <Setter Property="Margin" Value="1,30,0,6" />
                </Style.Setters>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <ScrollViewer>
            <iwk:SimpleStackPanel Margin="36,0" Spacing="4">
                <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" Text="{lex:Loc GeneralSettingsHeader}" />
                <ui:SettingsCard Description="{Binding AppSettings.W3StringsPath, FallbackValue={lex:Loc W3StringsPath}}" Header="{lex:Loc EncoderSettingCardHeader}">
                    <ui:SettingsCard.HeaderIcon>
                        <ui:FontIcon Glyph="&#xE90F;" />
                    </ui:SettingsCard.HeaderIcon>
                    <Button Command="{Binding SetW3StringsPathCommand}">
                        <ui:FontIcon Glyph="&#xe71e;" />
                    </Button>
                </ui:SettingsCard>
                <ui:SettingsCard Description="{Binding AppSettings.GameExePath, FallbackValue={lex:Loc GameExePath}}" Header="{lex:Loc GameSettingCardHeader}">
                    <ui:SettingsCard.HeaderIcon>
                        <ui:FontIcon Glyph="&#xE7FC;" />
                    </ui:SettingsCard.HeaderIcon>
                    <Button Command="{Binding SetGameExePathCommand}">
                        <ui:FontIcon Glyph="&#xe71e;" />
                    </Button>
                </ui:SettingsCard>
                <ui:SettingsCard Header="{lex:Loc PreferredFiletype}">
                    <ui:SettingsCard.HeaderIcon>
                        <ui:FontIcon Glyph="&#xE97C;" />
                    </ui:SettingsCard.HeaderIcon>
                    <ComboBox ItemsSource="{Binding Source={StaticResource FileType}}" SelectedItem="{Binding AppSettings.PreferredW3FileType, Mode=TwoWay}" />
                </ui:SettingsCard>
                <ui:SettingsCard Header="{lex:Loc PreferredLanguage}">
                    <ui:SettingsCard.HeaderIcon>
                        <ui:FontIcon Glyph="&#xF2B7;" />
                    </ui:SettingsCard.HeaderIcon>
                    <ComboBox ItemsSource="{Binding Source={StaticResource W3Language}}" SelectedItem="{Binding AppSettings.PreferredLanguage, Mode=TwoWay}" />
                </ui:SettingsCard>
                <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" Text="{lex:Loc AiTranslatorSettingsHeader}" />
                <ui:SettingsCard Description="{lex:Loc AiTranslatorSwitchDescription}" Header="{lex:Loc AiTranslatorSwitchHeader}">
                    <ui:ToggleSwitch
                        IsOn="{Binding AppSettings.IsUseAiTranslate}"
                        OffContent="{lex:Loc IsOff}"
                        OnContent="{lex:Loc IsOn}" />
                </ui:SettingsCard>
                <ui:SettingsCard Description="{lex:Loc ModelSettingsDescription}" Header="{lex:Loc ModelSettingsHeader}">
                    <Button Command="{Binding ShowModelSettingDialogCommand}">
                        <ui:FontIcon Glyph="&#xE70F;" />
                    </Button>
                </ui:SettingsCard>
                <ui:SettingsCard Description="{lex:Loc PromptsSettingsDescription}" Header="{lex:Loc PromptsSettingsHeader}">
                    <Button Command="{Binding ShowPromotsSettingDialogCommand}">
                        <ui:FontIcon Glyph="&#xE70F;" />
                        <!--<ui:FlyoutService.Flyout>
                            <ui:Flyout>
                                <Grid Width="300" Height="300">
                                    <TextBox
                                        Margin="0,16,0,0"
                                        AcceptsReturn="True"
                                        Text="{Binding AppSettings.ModelSettings.Prompts, UpdateSourceTrigger=PropertyChanged}"
                                        TextWrapping="WrapWithOverflow">
                                        <ui:ControlHelper.HeaderTemplate>
                                            <DataTemplate>
                                                <TextBlock FontWeight="Bold" Text="{lex:Loc PromptsSettingsHeader}" />
                                            </DataTemplate>
                                        </ui:ControlHelper.HeaderTemplate>
                                    </TextBox>
                                </Grid>
                            </ui:Flyout>
                        </ui:FlyoutService.Flyout>-->
                    </Button>
                </ui:SettingsCard>
                <ui:SettingsCard Description="{lex:Loc TemperatureSettingDescription}" Header="{lex:Loc TemperatureSettingHeader}">
                    <Slider
                        AutoToolTipPrecision="1"
                        Maximum="2"
                        Minimum="-1"
                        SmallChange="0.1"
                        Value="{Binding AppSettings.ModelSettings.Temperature}" />
                </ui:SettingsCard>
                <ui:SettingsCard
                    Margin="0,0,0,36"
                    Description="{lex:Loc TopPSettingDescription}"
                    Header="{lex:Loc TopPSettingHeader}">
                    <Slider
                        AutoToolTipPrecision="1"
                        Maximum="2"
                        Minimum="-1"
                        SmallChange="0.1"
                        Value="{Binding AppSettings.ModelSettings.TopP}" />
                </ui:SettingsCard>
            </iwk:SimpleStackPanel>
        </ScrollViewer>
    </Grid>
</Window>