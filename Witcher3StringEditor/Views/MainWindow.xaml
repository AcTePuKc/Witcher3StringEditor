<Window
    x:Class="Witcher3StringEditor.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="clr-namespace:Witcher3StringEditor.Dialogs.Behaviors;assembly=Witcher3StringEditor.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sf="http://schemas.syncfusion.com/wpf"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:vm="clr-namespace:Witcher3StringEditor.ViewModels"
    Title="{lex:Loc AppTitle}"
    Width="1200"
    Height="800"
    d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
    lex:LocalizeDictionary.DesignCulture="en"
    lex:ResxLocalizationProvider.DefaultAssembly="Witcher3StringEditor"
    lex:ResxLocalizationProvider.DefaultDictionary="Strings"
    ui:TitleBar.ExtendViewIntoTitleBar="True"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    Closed="Window_Closed"
    WindowChrome.IsHitTestVisibleInChrome="True"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding WindowLoadedCommand}" />
        </i:EventTrigger>
        <i:EventTrigger EventName="Closed">
            <i:InvokeCommandAction Command="{Binding WindowClosedCommand}" />
        </i:EventTrigger>
        <i:EventTrigger EventName="Closing">
            <i:InvokeCommandAction Command="{Binding WindowClosingCommand}" PassEventArgsToCommand="True" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Height="48">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                Margin="20,0,0,0"
                VerticalAlignment="Center"
                Text="{lex:Loc AppTitle}" />
            <ui:AutoSuggestBox
                Grid.Column="1"
                VerticalAlignment="Center"
                PlaceholderText="{lex:Loc SearchBoxPlaceholderText}"
                QuerySubmitted="SearchBox_QuerySubmitted"
                TextChanged="SearchBox_TextChanged">
                <ui:AutoSuggestBox.QueryIcon>
                    <ui:FontIcon Glyph="&#xe721;" />
                </ui:AutoSuggestBox.QueryIcon>
            </ui:AutoSuggestBox>
        </Grid>
        <ui:CommandBar
            Grid.Row="1"
            HorizontalAlignment="Left"
            Background="Transparent">
            <ui:AppBarButton Command="{Binding OpenFileCommand}" Label="{lex:Loc OpenFileBtnLabel}">
                <ui:AppBarButton.Icon>
                    <ui:FontIcon Glyph="&#xe8e5;" />
                </ui:AppBarButton.Icon>
            </ui:AppBarButton>
            <ui:AppBarButton Command="{Binding ShowRecentDialogCommand}" Label="{lex:Loc RecentBtnLabel}">
                <ui:AppBarButton.Icon>
                    <ui:FontIcon Glyph="&#xe823;" />
                </ui:AppBarButton.Icon>
            </ui:AppBarButton>
            <ui:AppBarButton Command="{Binding AddCommand}" Label="{lex:Loc AddBtnLabel}">
                <ui:AppBarButton.Icon>
                    <ui:FontIcon Glyph="&#xe710;" />
                </ui:AppBarButton.Icon>
            </ui:AppBarButton>
            <ui:AppBarButton
                Command="{Binding EditCommand}"
                CommandParameter="{Binding SelectedItem, ElementName=SfDataGrid}"
                Label="{lex:Loc EditBtnLabel}">
                <ui:AppBarButton.Icon>
                    <ui:FontIcon Glyph="&#xe70f;" />
                </ui:AppBarButton.Icon>
                <ui:AppBarButton.Style>
                    <Style TargetType="ui:AppBarButton">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ElementName=SfDataGrid, Path=SelectedItem}" Value="{x:Null}">
                                <Setter Property="IsEnabled" Value="False" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ui:AppBarButton.Style>
            </ui:AppBarButton>
            <ui:AppBarButton
                Command="{Binding DeleteCommand}"
                CommandParameter="{Binding SelectedItems, ElementName=SfDataGrid}"
                Label="{lex:Loc DeleteBtnLabel}">
                <ui:AppBarButton.Icon>
                    <ui:FontIcon Glyph="&#xe74d;" />
                </ui:AppBarButton.Icon>
                <ui:AppBarButton.Style>
                    <Style TargetType="ui:AppBarButton">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ElementName=SfDataGrid, Path=SelectedItem}" Value="{x:Null}">
                                <Setter Property="IsEnabled" Value="False" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ui:AppBarButton.Style>
            </ui:AppBarButton>
            <ui:AppBarButton
                Command="{Binding ShowTranslateDialogCommand}"
                CommandParameter="{Binding Path=SelectedItem, ElementName=SfDataGrid}"
                Label="{lex:Loc TranslateBtnLabel}">
                <ui:AppBarButton.Icon>
                    <ui:FontIcon Glyph="&#xf2b7;" />
                </ui:AppBarButton.Icon>
            </ui:AppBarButton>
            <ui:AppBarButton Command="{Binding ShowSaveDialogCommand}" Label="{lex:Loc SaveBtnLabel}">
                <ui:AppBarButton.Icon>
                    <ui:FontIcon Glyph="&#xe74e;" />
                </ui:AppBarButton.Icon>
            </ui:AppBarButton>
            <ui:AppBarButton Command="{Binding ShowBackupDialogCommand}" Label="{lex:Loc BackupBtnLabel}">
                <ui:AppBarButton.Icon>
                    <ui:FontIcon Glyph="&#xe81c;" />
                </ui:AppBarButton.Icon>
            </ui:AppBarButton>
            <ui:AppBarButton Command="{Binding ShowLogDialogCommand}" Label="{lex:Loc LogBtnLabel}">
                <ui:AppBarButton.Icon>
                    <ui:FontIcon Glyph="&#xf000;" />
                </ui:AppBarButton.Icon>
            </ui:AppBarButton>
            <ui:AppBarButton Command="{Binding ShowSettingsDialogCommand}" Label="{lex:Loc SettingsBtnLabel}">
                <ui:AppBarButton.Icon>
                    <ui:FontIcon Glyph="&#xe713;" />
                </ui:AppBarButton.Icon>
            </ui:AppBarButton>
            <ui:AppBarButton Command="{Binding OpenWorkingFolderCommand}" Label="{lex:Loc OpenWorkingFolderBtnLabel}">
                <ui:AppBarButton.Icon>
                    <ui:FontIcon Glyph="&#xec50;" />
                </ui:AppBarButton.Icon>
            </ui:AppBarButton>
            <ui:AppBarButton Command="{Binding PlayGameCommand}" Label="{lex:Loc PlayBtnLabel}">
                <ui:AppBarButton.Icon>
                    <ui:FontIcon Glyph="&#xe768;" />
                </ui:AppBarButton.Icon>
            </ui:AppBarButton>
            <ui:AppBarButton Command="{Binding OpenNexusModsCommand}" Label="Nexus Mods">
                <ui:AppBarButton.Icon>
                    <ui:FontIcon Glyph="&#xe71b;" />
                </ui:AppBarButton.Icon>
            </ui:AppBarButton>
            <ui:AppBarButton Command="{Binding ShowAboutCommand}" Label="{lex:Loc AboutBtnLabel}">
                <ui:AppBarButton.Icon>
                    <ui:FontIcon Glyph="&#xe946;" />
                </ui:AppBarButton.Icon>
            </ui:AppBarButton>
        </ui:CommandBar>
        <TextBlock
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="18"
            Opacity="0.5"
            Text="{lex:Loc DropHereTxt}">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Visibility" Value="Hidden" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding W3Items.Count}" Value="0">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <sf:SfDataGrid
            x:Name="SfDataGrid"
            Grid.Row="2"
            Margin="16,16,16,0"
            HorizontalContentAlignment="Center"
            AllowDeleting="False"
            AllowDrop="True"
            AllowEditing="True"
            AllowResizingColumns="True"
            AutoGenerateColumns="False"
            ColumnSizer="AutoWithLastColumnFill"
            HeaderRowHeight="25"
            ItemsSource="{Binding PagedSource, ElementName=SfDataPager, Mode=TwoWay}"
            NavigationMode="Cell"
            RowHeight="30"
            SelectionMode="Extended"
            ShowRowHeader="True">
            <sf:SfDataGrid.Resources>
                <ResourceDictionary>
                    <Style TargetType="sf:GridRowHeaderCell">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="sf:GridRowHeaderCell">
                                    <Border
                                        x:Name="PART_RowHeaderCellBorder"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                        <Grid>
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Text="{Binding RowIndex, RelativeSource={RelativeSource TemplatedParent}}"
                                                TextAlignment="Center" />
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ResourceDictionary>
            </sf:SfDataGrid.Resources>
            <i:Interaction.Behaviors>
                <b:SfDataGridSizeChangedBehavior />
                <b:SfDataGridQueryRowHeightBehavior MinHeight="{Binding ElementName=SfDataGrid, Path=RowHeight}" />
                <b:SfDataGridCurrentCellEndEditBehavior />
                <b:FrameworkElementDropFileBehavior Data="{Binding DropFileData, Mode=TwoWay}" />
            </i:Interaction.Behaviors>
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="Drop">
                    <i:InvokeCommandAction Command="{Binding DropFileCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <sf:SfDataGrid.Columns>
                <sf:GridTextColumn
                    Width="100"
                    AllowResizing="True"
                    HeaderText="ID"
                    MappingName="StrId"
                    MinimumWidth="50"
                    TextAlignment="Center" />
                <sf:GridTextColumn
                    Width="100"
                    HeaderText="Key(Hex)"
                    MappingName="KeyHex"
                    MinimumWidth="50"
                    TextAlignment="Center" />
                <sf:GridTextColumn
                    Width="300"
                    HeaderText="Key(String)"
                    MappingName="KeyName"
                    MinimumWidth="200"
                    TextAlignment="Center" />
                <sf:GridTextColumn MappingName="Text" TextWrapping="WrapWithOverflow" />
            </sf:SfDataGrid.Columns>
        </sf:SfDataGrid>
        <sf:SfDataPager
            x:Name="SfDataPager"
            Grid.Row="3"
            Margin="0,4"
            HorizontalAlignment="Center"
            NumericButtonCount="10"
            PageSize="30"
            Source="{Binding W3Items, Mode=TwoWay}" />
        <ui:InfoBar
            Grid.Row="2"
            Margin="0,0,0,100"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            IsOpen="{Binding IsUpdateAvailable}"
            Message="{lex:Loc UpdateAvailable}">
            <ui:InfoBar.ActionButton>
                <Button Command="{Binding OpenNexusModsCommand}" Content="{lex:Loc UpdateBtnContent}" />
            </ui:InfoBar.ActionButton>
        </ui:InfoBar>
    </Grid>
</Window>